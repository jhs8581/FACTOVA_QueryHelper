<Window x:Class="FACTOVA_QueryHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FACTOVA_QueryHelper"
        xmlns:controls="clr-namespace:FACTOVA_QueryHelper.Controls"
        mc:Ignorable="d"
        Title="FACTOVA Query Helper" Height="700" Width="1200">
    <Grid>
        <TabControl x:Name="MainTabControl" Margin="10">
            <!-- 로그분석 탭 -->
            <TabItem Header="로그분석">
                <controls:LogAnalysisControl x:Name="LogAnalysisControl"/>
            </TabItem>

            <!-- SFC 모니터링 탭 -->
            <TabItem Header="SFC 모니터링">
                <controls:SfcMonitoringControl x:Name="SfcMonitoringControl"/>
            </TabItem>

            <!-- 설정 탭 -->
            <TabItem Header="설정">
                <controls:SettingsControl x:Name="SettingsControl"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
