<Window x:Class="FACTOVA_QueryHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FACTOVA_QueryHelper"
        xmlns:controls="clr-namespace:FACTOVA_QueryHelper.Controls"
        mc:Ignorable="d"
        Title="FACTOVA Query Helper" Height="900" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TabControl x:Name="MainTabControl" Margin="10">
            <!-- 실시간 모니터링 탭 (구 쿼리 실행) -->
            <TabItem Header="📊 실시간 모니터링">
                <controls:LogAnalysisControl x:Name="LogAnalysisControl"/>
            </TabItem>

            <!-- GMES 정보 조회 탭 -->
            <TabItem Header="GMES 정보 조회">
                <controls:GmesInfoControl x:Name="GmesInfoControl"/>
            </TabItem>
            
            <!-- 🏭 생산 정보 조회 탭 -->
            <TabItem Header="🏭 생산 정보 조회">
                <controls:GmesInfoControlNewNew x:Name="GmesInfoControlNew"/>
            </TabItem>
            
            <!-- 비즈 쿼리 조회 탭 -->
            <TabItem Header="📂 비즈 쿼리 조회">
                <controls:BizQueryControl x:Name="BizQueryControl"/>
            </TabItem>

            <!-- 쿼리 관리 탭 -->
            <TabItem Header="📝 쿼리 관리">
                <controls:QueryManagementControl x:Name="QueryManagementControl"/>
            </TabItem>

            <!-- 쿼리 실행 탭 (구 SQL Window) -->
            <TabItem Header="▶️ 쿼리 실행">
                <controls:QueryEditorView x:Name="QueryEditorView"/>
            </TabItem>

            <!-- NERP 검증 탭 -->
            <TabItem Header="🔍 NERP 검증">
                <controls:NerpValidationControl x:Name="NerpValidationControl"/>
            </TabItem>

            <!-- SFC 모니터링 탭 -->
            <TabItem Header="📡 SFC 모니터링">
                <controls:SfcMonitoringControl x:Name="SfcMonitoringControl"/>
            </TabItem>

            <!-- 비즈 변환 탭 -->
            <TabItem Header="🔄 비즈 변환">
                <controls:QueryBizTransformView x:Name="QueryBizTransformView"/>
            </TabItem>

            <!-- IN 조건 변환 탭 -->
            <TabItem Header="📋 IN 조건 변환">
                <controls:QueryInTransformView x:Name="QueryInTransformView"/>
            </TabItem>

            <!-- 설정 탭 -->
            <TabItem Header="⚙️ 설정">
                <controls:SettingsControl x:Name="SettingsControl"/>
            </TabItem>

            <!-- 도움말 탭 -->
            <TabItem Header="📖 도움말">
                <controls:HelpControl x:Name="HelpControl"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
