<Window x:Class="FACTOVA_QueryHelper.Controls.QueryTextEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SQL Query Edit" Height="500" Width="700"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="SQL Query:" FontWeight="Bold" Margin="0,0,0,10"/>

        <TextBox x:Name="QueryTextBox" 
                 Grid.Row="1"
                 TextWrapping="Wrap" 
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 FontFamily="Consolas"
                 FontSize="12"
                 Margin="0,0,0,15"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="SaveButton" Content="Save" 
                    Width="100" Height="35" Margin="0,0,10,0"
                    Click="SaveButton_Click"
                    Background="#FF28A745" 
                    Foreground="White"
                    FontWeight="Bold"
                    IsDefault="True"/>
            <Button x:Name="CancelButton" Content="Cancel" 
                    Width="100" Height="35"
                    Click="CancelButton_Click"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
