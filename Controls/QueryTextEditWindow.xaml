<Window x:Class="FACTOVA_QueryHelper.Controls.QueryTextEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
        Title="SQL Query Edit" Height="500" Width="700"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="True">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="SQL Query:" FontWeight="Bold" Margin="0,0,0,10"/>

        <avalonedit:TextEditor x:Name="QueryTextEditor"
                               Grid.Row="1"
                               FontFamily="Consolas"
                               FontSize="12"
                               ShowLineNumbers="True"
                               VerticalScrollBarVisibility="Auto"
                               HorizontalScrollBarVisibility="Auto"
                               Margin="0,0,0,15"
                               Background="White"
                               BorderBrush="#FFE0E0E0"
                               BorderThickness="1"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <!-- 🔥 치환 쿼리 복사 버튼 -->
            <Button x:Name="CopyReplacedQueryButton" Content="📋 치환 쿼리 복사" 
                    Width="140" Height="35" Margin="0,0,10,0"
                    Click="CopyReplacedQueryButton_Click"
                    Background="#FF6F42C1" 
                    Foreground="White"
                    FontWeight="Bold"
                    ToolTip="파라미터가 치환된 쿼리를 클립보드에 복사합니다"
                    Visibility="Collapsed"/>
            <Button x:Name="SaveButton" Content="Save" 
                    Width="100" Height="35" Margin="0,0,10,0"
                    Click="SaveButton_Click"
                    Background="#FF28A745" 
                    Foreground="White"
                    FontWeight="Bold"
                    IsDefault="True"/>
            <Button x:Name="CancelButton" Content="Cancel" 
                    Width="100" Height="35"
                    Click="CancelButton_Click"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
