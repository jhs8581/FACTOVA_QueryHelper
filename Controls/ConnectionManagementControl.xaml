<UserControl x:Class="FACTOVA_QueryHelper.Controls.ConnectionManagementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 제목 -->
        <TextBlock Text="접속 정보 관리" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Grid.Row="0"/>

        <!-- 버튼 영역 -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="RefreshButton" Content="🔄 새로고침" Width="120" Height="40" Margin="0,0,5,0"
                    Background="#FF2196F3" Foreground="White" FontWeight="Bold" FontSize="14"
                    Click="RefreshButton_Click"/>
            <Button x:Name="AddButton" Content="➕ 정보 추가" Width="120" Height="40" Margin="0,0,5,0"
                    Background="#FF4CAF50" Foreground="White" FontWeight="Bold" FontSize="14"
                    Click="AddButton_Click"/>
            <Button x:Name="DeleteButton" Content="🗑️ 삭제" Width="100" Height="40" Margin="0,0,5,0"
                    Background="#FFF44336" Foreground="White" FontWeight="Bold" FontSize="14"
                    Click="DeleteButton_Click"/>
            <TextBlock Text="모든 접속 정보: " VerticalAlignment="Center" FontSize="16" FontWeight="Bold" Margin="30,0,5,0"/>
            <TextBlock x:Name="TotalCountText" Text="0개" VerticalAlignment="Center" FontSize="16" FontWeight="Bold"
                       Foreground="#FF2196F3"/>
        </StackPanel>

        <!-- 편집 중 경고 메시지 -->
        <Border Grid.Row="2" Margin="0,0,0,10" Padding="10" Background="#FFFFF9C4" BorderBrush="#FFFFA726" 
                BorderThickness="2" CornerRadius="5" VerticalAlignment="Top" Height="50">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="✏️" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock Text="편집 중입니다. 필드를 수정한 후 저장하거나 취소하세요. Ctrl+C: 복사" 
                           FontWeight="SemiBold" VerticalAlignment="Center" FontSize="12"/>
                <Button Content="💾 변경사항 저장" Background="#FF4CAF50" Foreground="White" 
                        Padding="10,5" Margin="20,0,5,0" FontWeight="Bold"
                        Click="SaveChangesButton_Click"/>
                <Button Content="❌ 취소" Background="#FF607D8B" Foreground="White" 
                        Padding="10,5" FontWeight="Bold"
                        Click="CancelChangesButton_Click"/>
            </StackPanel>
        </Border>

        <!-- 데이터 그리드 -->
        <Border Grid.Row="2" BorderThickness="1" BorderBrush="#FFCCCCCC" CornerRadius="5" Margin="0,60,0,0">
            <DataGrid x:Name="ConnectionsDataGrid" 
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      SelectionMode="Single"
                      HeadersVisibility="Column"
                      GridLinesVisibility="All"
                      AlternatingRowBackground="#FFF5F5F5"
                      RowHeight="40"
                      FontSize="12"
                      CellEditEnding="ConnectionsDataGrid_CellEditEnding"
                      SelectionChanged="ConnectionsDataGrid_SelectionChanged">
                
                <DataGrid.Columns>
                    <!-- ID -->
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60" IsReadOnly="True">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#FF2196F3"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Padding" Value="10,5"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="LightBlue" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- 쿼리명 (편집 가능) -->
                    <DataGridTextColumn Header="DB 정보" Binding="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Width="2*" IsReadOnly="False">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#FF2196F3"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Padding" Value="10,5"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <!-- TNS (편집 가능) -->
                    <DataGridTextColumn Header="TNS" Binding="{Binding TNS, UpdateSourceTrigger=PropertyChanged}" Width="*" IsReadOnly="False">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#FF2196F3"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Padding" Value="10,5"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <!-- User ID (편집 가능) -->
                    <DataGridTextColumn Header="User ID" Binding="{Binding UserId, UpdateSourceTrigger=PropertyChanged}" Width="*" IsReadOnly="False">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#FF2196F3"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Padding" Value="10,5"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <!-- Password (편집 가능 - 텍스트로 표시) -->
                    <DataGridTextColumn Header="Password" Binding="{Binding Password, UpdateSourceTrigger=PropertyChanged}" Width="*" IsReadOnly="False">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#FF2196F3"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Padding" Value="10,5"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <!-- 활성 (CheckBox) -->
                    <DataGridCheckBoxColumn Header="활성" Binding="{Binding IsActive, UpdateSourceTrigger=PropertyChanged}" Width="60">
                        <DataGridCheckBoxColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#FF2196F3"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Padding" Value="10,5"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            </Style>
                        </DataGridCheckBoxColumn.HeaderStyle>
                        <DataGridCheckBoxColumn.ElementStyle>
                            <Style TargetType="CheckBox">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </DataGridCheckBoxColumn.ElementStyle>
                    </DataGridCheckBoxColumn>

                    <!-- 즐겨찾기 (CheckBox) -->
                    <DataGridCheckBoxColumn Header="즐겨찾기" Binding="{Binding IsFavorite, UpdateSourceTrigger=PropertyChanged}" Width="80">
                        <DataGridCheckBoxColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#FF2196F3"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Padding" Value="10,5"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            </Style>
                        </DataGridCheckBoxColumn.HeaderStyle>
                        <DataGridCheckBoxColumn.ElementStyle>
                            <Style TargetType="CheckBox">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </DataGridCheckBoxColumn.ElementStyle>
                    </DataGridCheckBoxColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>
