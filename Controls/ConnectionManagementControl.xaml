<UserControl x:Class="FACTOVA_QueryHelper.Controls.ConnectionManagementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1400">
    
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 버튼 영역 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="RefreshButton" Content="🔄 새로고침" Width="120" Height="40" Margin="0,0,5,0"
                    Background="#FF2196F3" Foreground="White" FontWeight="Bold" FontSize="13"
                    Click="RefreshButton_Click"/>
            <Button x:Name="AddButton" Content="➕ 정보 추가" Width="120" Height="40" Margin="0,0,5,0"
                    Background="#FF4CAF50" Foreground="White" FontWeight="Bold" FontSize="13"
                    Click="AddButton_Click"/>
            <Button x:Name="DeleteButton" Content="🗑️ 삭제" Width="100" Height="40" Margin="0,0,5,0"
                    Background="#FFF44336" Foreground="White" FontWeight="Bold" FontSize="13"
                    Click="DeleteButton_Click"/>
            <TextBlock Text="모든 접속 정보: " VerticalAlignment="Center" FontSize="14" FontWeight="Bold" Margin="30,0,5,0"/>
            <TextBlock x:Name="TotalCountText" Text="0개" VerticalAlignment="Center" FontSize="14" FontWeight="Bold"
                       Foreground="#FF2196F3"/>
        </StackPanel>

        <!-- 편집 중 경고 메시지 (동적 높이) -->
        <Border x:Name="EditModeBorder" 
                Grid.Row="1" 
                Margin="0,0,0,10" 
                Padding="12,8" 
                Background="#FFFFEAA7" 
                BorderBrush="#FFFFC107" 
                BorderThickness="1" 
                CornerRadius="6"
                Visibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="✏️" 
                           FontSize="16" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"/>

                <TextBlock Grid.Column="1" 
                           VerticalAlignment="Center">
                    <Run Text="편집 중입니다. " FontWeight="Bold"/>
                    <Run Text="필드를 수정한 후 저장하거나 취소하세요."/>
                </TextBlock>

                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal">
                    <Button Content="💾 변경사항 저장" 
                            Background="#FF28A745" 
                            Foreground="White" 
                            BorderThickness="0"
                            Cursor="Hand"
                            Width="130" 
                            Height="30"
                            Margin="0,0,8,0"
                            FontWeight="SemiBold"
                            Click="SaveChangesButton_Click"/>
                    <Button Content="❌ 취소" 
                            Background="#FF6C757D" 
                            Foreground="White" 
                            BorderThickness="0"
                            Cursor="Hand"
                            Width="80" 
                            Height="30"
                            Click="CancelChangesButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 데이터 그리드 -->
        <Border Grid.Row="2" BorderThickness="1" BorderBrush="#FFCCCCCC" CornerRadius="5">
            <DataGrid x:Name="ConnectionsDataGrid" 
                      AutoGenerateColumns="False"
                      IsReadOnly="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      SelectionMode="Single"
                      HeadersVisibility="Column"
                      GridLinesVisibility="All"
                      AlternatingRowBackground="#FFF5F5F5"
                      RowHeight="35"
                      FontSize="11"
                      CellEditEnding="ConnectionsDataGrid_CellEditEnding"
                      SelectionChanged="ConnectionsDataGrid_SelectionChanged">
                <!-- 🔥 FACTOVA Grid 스타일 자동 적용 + IsReadOnly="False"로 편집 가능 -->
                <DataGrid.Columns>
                    <!-- ID -->
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60" IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="FontSize" Value="11"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="#FF6C757D"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- DB 정보 (편집 가능) -->
                    <DataGridTextColumn Header="DB 정보" Binding="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Width="2*" IsReadOnly="False"/>

                    <!-- TNS (편집 가능) -->
                    <DataGridTextColumn Header="TNS" Binding="{Binding TNS, UpdateSourceTrigger=PropertyChanged}" Width="*" IsReadOnly="False"/>

                    <!-- User ID (편집 가능) -->
                    <DataGridTextColumn Header="User ID" Binding="{Binding UserId, UpdateSourceTrigger=PropertyChanged}" Width="*" IsReadOnly="False"/>

                    <!-- Password (편집 가능 - 텍스트로 표시) -->
                    <DataGridTextColumn Header="Password" Binding="{Binding Password, UpdateSourceTrigger=PropertyChanged}" Width="*" IsReadOnly="False"/>

                    <!-- ORG (편집 가능) -->
                    <DataGridTextColumn Header="ORG (사업부)" Binding="{Binding Org, UpdateSourceTrigger=PropertyChanged}" Width="*" IsReadOnly="False"/>

                    <!-- Version (ComboBox로 선택) -->
                    <DataGridComboBoxColumn Header="Version" 
                                            SelectedItemBinding="{Binding Version, UpdateSourceTrigger=PropertyChanged}"
                                            Width="100">
                        <DataGridComboBoxColumn.ElementStyle>
                            <Style TargetType="ComboBox">
                                <Setter Property="FontSize" Value="11"/>
                                <Setter Property="IsReadOnly" Value="True"/>
                            </Style>
                        </DataGridComboBoxColumn.ElementStyle>
                        <DataGridComboBoxColumn.EditingElementStyle>
                            <Style TargetType="ComboBox">
                                <Setter Property="FontSize" Value="11"/>
                                <Setter Property="IsEditable" Value="True"/>
                            </Style>
                        </DataGridComboBoxColumn.EditingElementStyle>
                    </DataGridComboBoxColumn>

                    <!-- 활성 (CheckBox) -->
                    <DataGridCheckBoxColumn Header="활성" Binding="{Binding IsActive, UpdateSourceTrigger=PropertyChanged}" Width="60">
                        <DataGridCheckBoxColumn.ElementStyle>
                            <Style TargetType="CheckBox">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </DataGridCheckBoxColumn.ElementStyle>
                    </DataGridCheckBoxColumn>

                    <!-- 즐겨찾기 (CheckBox) -->
                    <DataGridCheckBoxColumn Header="즐겨찾기" Binding="{Binding IsFavorite, UpdateSourceTrigger=PropertyChanged}" Width="80">
                        <DataGridCheckBoxColumn.ElementStyle>
                            <Style TargetType="CheckBox">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </DataGridCheckBoxColumn.ElementStyle>
                    </DataGridCheckBoxColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>
