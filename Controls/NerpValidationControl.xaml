<UserControl x:Class="FACTOVA_QueryHelper.Controls.NerpValidationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FACTOVA_QueryHelper.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Section: Query Input Area -->
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Query Group Selection (Version 자동 매칭) -->
            <Border Grid.Row="0" Margin="0,0,0,5" Padding="8,5" 
                    Background="#F0F8FF" BorderBrush="#B0C4DE" BorderThickness="1" CornerRadius="3">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="쿼리 그룹 (버전 자동 매칭):" 
                               Grid.Column="0"
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0" 
                               FontWeight="SemiBold"
                               Foreground="#2C5AA0"/>
                    
                    <ComboBox x:Name="QueryGroupComboBox" 
                              Grid.Column="1"
                              VerticalAlignment="Center"
                              FontSize="11"
                              SelectionChanged="QueryGroupComboBox_SelectionChanged"/>
                    
                    <Button Content="🔄 새로고침" 
                            Grid.Column="2"
                            Padding="8,4" 
                            Margin="10,0,0,0"
                            FontSize="10"
                            Click="RefreshQueryButton_Click"/>
                </Grid>
            </Border>

            <!-- DB Info Multi-Selection + Date Range + Execute Button -->
            <Border Grid.Row="1" Margin="0,0,0,5" Padding="8,5" 
                    Background="#F0F8FF" BorderBrush="#B0C4DE" BorderThickness="1" CornerRadius="3">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="🔌 DB:" 
                               Grid.Column="0"
                               VerticalAlignment="Center" 
                               Margin="0,0,5,0" 
                               FontWeight="SemiBold"
                               Foreground="#2C5AA0"/>
                    
                    <ComboBox x:Name="ConnectionMultiComboBox" 
                              Grid.Column="1"
                              IsEditable="True"
                              IsReadOnly="True"
                              VerticalAlignment="Center"
                              FontSize="11"
                              DropDownClosed="ConnectionMultiComboBox_DropDownClosed">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                          Click="ConnectionCheckBox_Click"
                                          FontSize="11"
                                          Margin="2">
                                    <TextBlock Text="{Binding ConnectionName}"/>
                                </CheckBox>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    
                    <Button Content="✔️" 
                            Grid.Column="2"
                            ToolTip="전체 선택"
                            Padding="4,2" 
                            Margin="3,0,0,0"
                            FontSize="10"
                            VerticalAlignment="Center"
                            Background="#FF4CAF50"
                            Foreground="White"
                            Click="SelectAllConnections_Click"/>
                    
                    <Button Content="❌" 
                            Grid.Column="3"
                            ToolTip="전체 해제"
                            Padding="4,2" 
                            Margin="2,0,0,0"
                            FontSize="10"
                            VerticalAlignment="Center"
                            Background="#FFF44336"
                            Foreground="White"
                            Click="DeselectAllConnections_Click"/>
                    
                    <TextBlock Text="📅" 
                               Grid.Column="4"
                               VerticalAlignment="Center" 
                               Margin="10,0,5,0" 
                               FontSize="12"/>
                    
                    <DatePicker x:Name="DateFromPicker" 
                                Grid.Column="5"
                                Width="110" 
                                Margin="0,0,3,0"
                                VerticalAlignment="Center"
                                FontSize="11"/>
                    
                    <TextBlock Text="~" 
                               Grid.Column="6"
                               VerticalAlignment="Center" 
                               Margin="0,0,3,0"
                               FontSize="12"/>
                    
                    <DatePicker x:Name="DateToPicker" 
                                Grid.Column="7"
                                Width="110" 
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                FontSize="11"/>
                    
                    <Button x:Name="ExecuteQueryButton" 
                            Content="▶ 조회" 
                            Grid.Column="8" 
                            Background="#FF2196F3" 
                            Foreground="White" 
                            FontWeight="Bold" 
                            FontSize="11"
                            Padding="10,4" 
                            Margin="0,0,5,0"
                            VerticalAlignment="Center"
                            Click="ExecuteQueryButton_Click"/>
                    
                    <Button x:Name="ExportExcelButton" 
                            Content="📥 Excel" 
                            Grid.Column="9" 
                            Background="#FF28A745" 
                            Foreground="White" 
                            FontWeight="Bold" 
                            FontSize="11"
                            Padding="10,4" 
                            Margin="0,0,0,0"
                            VerticalAlignment="Center"
                            Click="ExportExcelButton_Click"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Bottom Section: Single Query Result -->
        <GroupBox Header="📊 Query Results" Grid.Row="1" Margin="0,0,0,0"
                  BorderBrush="#CCCCCC" BorderThickness="1">
            <GroupBox.HeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" FontWeight="Bold" Foreground="#2C5AA0"/>
                </DataTemplate>
            </GroupBox.HeaderTemplate>
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Result Status -->
                <Border Grid.Row="0" Margin="0,0,0,5" Padding="5" 
                        Background="#F0F8FF" BorderBrush="#B0C4DE" BorderThickness="1" CornerRadius="3">
                    <TextBlock x:Name="ResultStatusText" 
                               Text="⏸️ Ready to execute query on selected sites" 
                               FontWeight="SemiBold" 
                               Foreground="#2C5AA0"/>
                </Border>

                <!-- Unified Result Grid -->
                <DataGrid x:Name="QueryResultDataGrid" 
                          Grid.Row="1"
                          AutoGenerateColumns="True"
                          CanUserAddRows="False" 
                          CanUserDeleteRows="False"
                          CanUserReorderColumns="True"
                          CanUserResizeColumns="True"
                          IsReadOnly="True"
                          AlternatingRowBackground="#F5F5F5" 
                          GridLinesVisibility="All"
                          AutoGeneratingColumn="QueryResultDataGrid_AutoGeneratingColumn"
                          LoadingRow="QueryResultDataGrid_LoadingRow"
                          SelectionMode="Extended"
                          SelectionUnit="CellOrRowHeader">
                    <DataGrid.Resources>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#F0F8FF"/>
                            <Setter Property="Foreground" Value="#2C5AA0"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Padding" Value="8,5"/>
                            <Setter Property="BorderBrush" Value="#B0C4DE"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            <Setter Property="HorizontalContentAlignment" Value="Left"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                        </Style>
                    </DataGrid.Resources>
                    
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Padding" Value="5,3"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#E3F2FD"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>
                </DataGrid>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
