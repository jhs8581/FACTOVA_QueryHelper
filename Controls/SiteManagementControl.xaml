<UserControl x:Class="FACTOVA_QueryHelper.Controls.SiteManagementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1600">
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 버튼 영역 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="RefreshButton" Content="🔄 새로고침" Width="120" Height="40" Margin="0,0,5,0"
                    Background="#FF2196F3" Foreground="White" FontWeight="Bold" FontSize="13"
                    Click="RefreshButton_Click"/>
            <Button x:Name="AddButton" Content="➕ 사업장 추가" Width="130" Height="40" Margin="0,0,5,0"
                    Background="#FF4CAF50" Foreground="White" FontWeight="Bold" FontSize="13"
                    Click="AddButton_Click"/>
            <Button x:Name="DeleteButton" Content="🗑️ 삭제" Width="100" Height="40" Margin="0,0,5,0"
                    Background="#FFF44336" Foreground="White" FontWeight="Bold" FontSize="13"
                    Click="DeleteButton_Click"/>
            <TextBlock Text="모든 사업장: " VerticalAlignment="Center" FontSize="14" FontWeight="Bold" Margin="30,0,5,0"/>
            <TextBlock x:Name="TotalCountText" Text="0개" VerticalAlignment="Center" FontSize="14" FontWeight="Bold"
                       Foreground="#FF2196F3"/>
        </StackPanel>

        <!-- 편집 중 경고 메시지 (동적 높이) -->
        <Border x:Name="EditModeBorder" 
                Grid.Row="1" 
                Margin="0,0,0,10" 
                Padding="12,8" 
                Background="#FFFFEAA7" 
                BorderBrush="#FFFFC107" 
                BorderThickness="1" 
                CornerRadius="6"
                Visibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="✏️" 
                           FontSize="16" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"/>

                <TextBlock Grid.Column="1" 
                           VerticalAlignment="Center">
                    <Run Text="편집 중입니다. " FontWeight="Bold"/>
                    <Run Text="필드를 수정한 후 저장하거나 취소하세요."/>
                </TextBlock>

                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal">
                    <Button Content="💾 변경사항 저장" 
                            Background="#FF28A745" 
                            Foreground="White" 
                            BorderThickness="0"
                            Cursor="Hand"
                            Width="130" 
                            Height="30"
                            Margin="0,0,8,0"
                            FontWeight="SemiBold"
                            Click="SaveChangesButton_Click"/>
                    <Button Content="❌ 취소" 
                            Background="#FF6C757D" 
                            Foreground="White" 
                            BorderThickness="0"
                            Cursor="Hand"
                            Width="80" 
                            Height="30"
                            Click="CancelChangesButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 데이터 그리드 -->
        <Border Grid.Row="2" BorderThickness="1" BorderBrush="#FFCCCCCC" CornerRadius="5">
            <DataGrid x:Name="SiteDataGrid" 
                      AutoGenerateColumns="False"
                      IsReadOnly="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      SelectionMode="Single"
                      HeadersVisibility="Column"
                      GridLinesVisibility="All"
                      AlternatingRowBackground="#FFF5F5F5"
                      RowHeight="35"
                      FontSize="11"
                      CellEditEnding="SiteDataGrid_CellEditEnding"
                      SelectionChanged="SiteDataGrid_SelectionChanged">
                <!-- 🔥 FACTOVA Grid 스타일 자동 적용 + IsReadOnly="False"로 편집 가능 -->
                <DataGrid.Columns>
                    <!-- ID -->
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60" IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="FontSize" Value="11"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="#FF6C757D"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- 사업장명 (편집 가능) -->
                    <DataGridTextColumn Header="사업장명" Binding="{Binding SiteName, UpdateSourceTrigger=PropertyChanged}" Width="120" IsReadOnly="False"/>

                    <!-- 대표공장 (편집 가능) -->
                    <DataGridTextColumn Header="대표공장" Binding="{Binding RepresentativeFactory, UpdateSourceTrigger=PropertyChanged}" Width="*" IsReadOnly="False"/>

                    <!-- ORG (편집 가능) -->
                    <DataGridTextColumn Header="ORG" Binding="{Binding Organization, UpdateSourceTrigger=PropertyChanged}" Width="*" IsReadOnly="False"/>

                    <!-- FACILITY (편집 가능) -->
                    <DataGridTextColumn Header="FACILITY" Binding="{Binding Facility, UpdateSourceTrigger=PropertyChanged}" Width="*" IsReadOnly="False"/>

                    <!-- 윕라인 ID (편집 가능) -->
                    <DataGridTextColumn Header="윕라인 ID" Binding="{Binding WipLineId, UpdateSourceTrigger=PropertyChanged}" Width="*" IsReadOnly="False"/>

                    <!-- 설비라인 ID (편집 가능) -->
                    <DataGridTextColumn Header="설비라인 ID" Binding="{Binding EquipLineId, UpdateSourceTrigger=PropertyChanged}" Width="*" IsReadOnly="False"/>

                    <!-- DIVISION (편집 가능) -->
                    <DataGridTextColumn Header="DIVISION" Binding="{Binding Division, UpdateSourceTrigger=PropertyChanged}" Width="*" IsReadOnly="False"/>

                    <!-- 🔥 TNS (1.0) - 접속 정보 ComboBox -->
                    <DataGridComboBoxColumn Header="TNS (1.0)" 
                                            SelectedItemBinding="{Binding Tns10ConnectionInfo, UpdateSourceTrigger=PropertyChanged}" 
                                            DisplayMemberPath="DisplayName"
                                            Width="250">
                        <DataGridComboBoxColumn.ElementStyle>
                            <Style TargetType="ComboBox">
                                <Setter Property="IsEditable" Value="False"/>
                            </Style>
                        </DataGridComboBoxColumn.ElementStyle>
                        <DataGridComboBoxColumn.EditingElementStyle>
                            <Style TargetType="ComboBox">
                                <Setter Property="IsEditable" Value="False"/>
                            </Style>
                        </DataGridComboBoxColumn.EditingElementStyle>
                    </DataGridComboBoxColumn>

                    <!-- 🔥 TNS (2.0) - 접속 정보 ComboBox -->
                    <DataGridComboBoxColumn Header="TNS (2.0)" 
                                            SelectedItemBinding="{Binding Tns20ConnectionInfo, UpdateSourceTrigger=PropertyChanged}" 
                                            DisplayMemberPath="DisplayName"
                                            Width="250">
                        <DataGridComboBoxColumn.ElementStyle>
                            <Style TargetType="ComboBox">
                                <Setter Property="IsEditable" Value="False"/>
                            </Style>
                        </DataGridComboBoxColumn.ElementStyle>
                        <DataGridComboBoxColumn.EditingElementStyle>
                            <Style TargetType="ComboBox">
                                <Setter Property="IsEditable" Value="False"/>
                            </Style>
                        </DataGridComboBoxColumn.EditingElementStyle>
                    </DataGridComboBoxColumn>

                    <!-- 🔥 표시순번 (기존 IsDefault를 숫자로 재사용) -->
                    <DataGridTextColumn Header="표시순번" Binding="{Binding IsDefault, UpdateSourceTrigger=PropertyChanged}" Width="80" IsReadOnly="False">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>
