<UserControl x:Class="FACTOVA_QueryHelper.Controls.GmesInfoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="#FFF8F9FA">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 상단 조회 영역 (계획정보 조회 관련 파라미터만) -->
        <Border Grid.Row="0" 
                x:Name="SearchConditionBorder"
                Background="White" 
                BorderBrush="#FFE0E0E0" 
                BorderThickness="1" 
                CornerRadius="8"
                Padding="15"
                Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto" x:Name="SearchConditionRow"/>
                </Grid.RowDefinitions>

                <!-- 접기/펼치기 버튼 -->
                <Button x:Name="ToggleSearchConditionButton"
                        Grid.Row="0"
                        Height="35"
                        Click="ToggleSearchConditionButton_Click"
                        Background="#FF0078D7"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontWeight="Bold"
                        FontSize="12"
                        Margin="0,0,0,10"
                        HorizontalContentAlignment="Left"
                        Padding="15,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="ToggleIconTextBlock" Text="▲" FontSize="14" Margin="0,0,10,0"/>
                        <TextBlock Text="조회 조건" FontSize="13"/>
                    </StackPanel>
                </Button>

                <!-- 조회 조건 그리드 -->
                <Grid x:Name="SearchConditionGrid" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                    </Grid.RowDefinitions>

                    <!-- 헤더 (첫 번째 그룹) -->
                    <Border Grid.Column="0" Grid.Row="0" Background="#FF0078D7" BorderBrush="#FFE0E0E0" BorderThickness="1">
                        <TextBlock Text="입력 항목" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="11"/>
                    </Border>
                    <Border Grid.Column="1" Grid.Row="0" Background="#FF0078D7" BorderBrush="#FFE0E0E0" BorderThickness="1">
                        <TextBlock Text="값" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="11"/>
                    </Border>
                    <Border Grid.Column="2" Grid.Row="0" Background="#FF0078D7" BorderBrush="#FFE0E0E0" BorderThickness="1">
                        <TextBlock Text="쿼리 파라미터" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="10"/>
                    </Border>

                    <!-- 헤더 (두 번째 그룹) -->
                    <Border Grid.Column="3" Grid.Row="0" Background="#FF0078D7" BorderBrush="#FFE0E0E0" BorderThickness="1">
                        <TextBlock Text="입력 항목" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="11"/>
                    </Border>
                    <Border Grid.Column="4" Grid.Row="0" Background="#FF0078D7" BorderBrush="#FFE0E0E0" BorderThickness="1">
                        <TextBlock Text="값" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="11"/>
                    </Border>
                    <Border Grid.Column="5" Grid.Row="0" Background="#FF0078D7" BorderBrush="#FFE0E0E0" BorderThickness="1">
                        <TextBlock Text="쿼리 파라미터" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="10"/>
                    </Border>

                    <!-- 헤더 (세 번째 그룹) -->
                    <Border Grid.Column="6" Grid.Row="0" Background="#FF0078D7" BorderBrush="#FFE0E0E0" BorderThickness="1">
                        <TextBlock Text="입력 항목" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="11"/>
                    </Border>
                    <Border Grid.Column="7" Grid.Row="0" Background="#FF0078D7" BorderBrush="#FFE0E0E0" BorderThickness="1">
                        <TextBlock Text="값" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="11"/>
                    </Border>
                    <Border Grid.Column="8" Grid.Row="0" Background="#FF0078D7" BorderBrush="#FFE0E0E0" BorderThickness="1">
                        <TextBlock Text="쿼리 파라미터" FontWeight="Bold" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="10"/>
                    </Border>

                    <!-- Row 1: 대표공장 | ORG | 계획일자(시작) -->
                    <Border Grid.Column="0" Grid.Row="1" BorderBrush="#FFE0E0E0" BorderThickness="1" Background="#FFF8F9FA">
                        <TextBlock Text="대표공장" FontWeight="SemiBold" VerticalAlignment="Center" Margin="5,0" FontSize="11"/>
                    </Border>
                    <Border Grid.Column="1" Grid.Row="1" BorderBrush="#FFE0E0E0" BorderThickness="1">
                        <TextBox x:Name="FactoryTextBox" Height="28" VerticalContentAlignment="Center" Margin="5" FontSize="11"/>
                    </Border>
                    <Border Grid.Column="2" Grid.Row="1" BorderBrush="#FFE0E0E0" BorderThickness="1" Background="#FFF0F8FF">
                        <TextBlock Text="@REPRESENTATIVE_FACTORY_CODE" FontSize="9" Foreground="#FF495057" VerticalAlignment="Center" Margin="5,0"/>
                    </Border>

                    <Border Grid.Column="3" Grid.Row="1" BorderBrush="#FFE0E0E0" BorderThickness="1" Background="#FFF8F9FA">
                        <TextBlock Text="ORG" FontWeight="SemiBold" VerticalAlignment="Center" Margin="5,0" FontSize="11"/>
                    </Border>
                    <Border Grid.Column="4" Grid.Row="1" BorderBrush="#FFE0E0E0" BorderThickness="1">
                        <TextBox x:Name="OrgTextBox" Height="28" VerticalContentAlignment="Center" Margin="5" FontSize="11"/>
                    </Border>
                    <Border Grid.Column="5" Grid.Row="1" BorderBrush="#FFE0E0E0" BorderThickness="1" Background="#FFF0F8FF">
                        <TextBlock Text="@ORGANIZATION_ID" FontSize="9" Foreground="#FF495057" VerticalAlignment="Center" Margin="5,0"/>
                    </Border>

                    <Border Grid.Column="6" Grid.Row="1" BorderBrush="#FFE0E0E0" BorderThickness="1" Background="#FFF8F9FA">
                        <TextBlock Text="계획일자 (시작)" FontWeight="SemiBold" VerticalAlignment="Center" Margin="5,0" FontSize="11"/>
                    </Border>
                    <Border Grid.Column="7" Grid.Row="1" BorderBrush="#FFE0E0E0" BorderThickness="1">
                        <DatePicker x:Name="DateFromPicker" Height="28" VerticalContentAlignment="Center" Margin="5" FontSize="11"/>
                    </Border>
                    <Border Grid.Column="8" Grid.Row="1" BorderBrush="#FFE0E0E0" BorderThickness="1" Background="#FFF0F8FF">
                        <TextBlock Text="@PRODUCTION_YMD_START" FontSize="9" Foreground="#FF495057" VerticalAlignment="Center" Margin="5,0"/>
                    </Border>

                    <!-- Row 2: 계획일자(종료) | 윕라인 ID | 설비라인 ID -->
                    <Border Grid.Column="0" Grid.Row="2" BorderBrush="#FFE0E0E0" BorderThickness="1" Background="#FFF8F9FA">
                        <TextBlock Text="계획일자 (종료)" FontWeight="SemiBold" VerticalAlignment="Center" Margin="5,0" FontSize="11"/>
                    </Border>
                    <Border Grid.Column="1" Grid.Row="2" BorderBrush="#FFE0E0E0" BorderThickness="1">
                        <DatePicker x:Name="DateToPicker" Height="28" VerticalContentAlignment="Center" Margin="5" FontSize="11"/>
                    </Border>
                    <Border Grid.Column="2" Grid.Row="2" BorderBrush="#FFE0E0E0" BorderThickness="1" Background="#FFF0F8FF">
                        <TextBlock Text="@PRODUCTION_YMD_END" FontSize="9" Foreground="#FF495057" VerticalAlignment="Center" Margin="5,0"/>
                    </Border>

                    <Border Grid.Column="3" Grid.Row="2" BorderBrush="#FFE0E0E0" BorderThickness="1" Background="#FFF8F9FA">
                        <TextBlock Text="윕라인 ID" FontWeight="SemiBold" VerticalAlignment="Center" Margin="5,0" FontSize="11"/>
                    </Border>
                    <Border Grid.Column="4" Grid.Row="2" BorderBrush="#FFE0E0E0" BorderThickness="1">
                        <TextBox x:Name="WipLineIdTextBox" Height="28" VerticalContentAlignment="Center" Margin="5" FontSize="11"/>
                    </Border>
                    <Border Grid.Column="5" Grid.Row="2" BorderBrush="#FFE0E0E0" BorderThickness="1" Background="#FFF0F8FF">
                        <TextBlock Text="@WIP_LINE_ID" FontSize="9" Foreground="#FF495057" VerticalAlignment="Center" Margin="5,0"/>
                    </Border>

                    <Border Grid.Column="6" Grid.Row="2" BorderBrush="#FFE0E0E0" BorderThickness="1" Background="#FFF8F9FA">
                        <TextBlock Text="설비라인 ID" FontWeight="SemiBold" VerticalAlignment="Center" Margin="5,0" FontSize="11"/>
                    </Border>
                    <Border Grid.Column="7" Grid.Row="2" BorderBrush="#FFE0E0E0" BorderThickness="1">
                        <TextBox x:Name="EquipLineIdTextBox" Height="28" VerticalContentAlignment="Center" Margin="5" FontSize="11"/>
                    </Border>
                    <Border Grid.Column="8" Grid.Row="2" BorderBrush="#FFE0E0E0" BorderThickness="1" Background="#FFF0F8FF">
                        <TextBlock Text="@LINE_ID" FontSize="9" Foreground="#FF495057" VerticalAlignment="Center" Margin="5,0"/>
                    </Border>

                    <!-- Row 3: FACILITY | W/O | W/O 명 -->
                    <Border Grid.Column="0" Grid.Row="3" BorderBrush="#FFE0E0E0" BorderThickness="1" Background="#FFF8F9FA">
                        <TextBlock Text="FACILITY" FontWeight="SemiBold" VerticalAlignment="Center" Margin="5,0" FontSize="11"/>
                    </Border>
                    <Border Grid.Column="1" Grid.Row="3" BorderBrush="#FFE0E0E0" BorderThickness="1">
                        <TextBox x:Name="FacilityTextBox" Height="28" VerticalContentAlignment="Center" Margin="5" FontSize="11"/>
                    </Border>
                    <Border Grid.Column="2" Grid.Row="3" BorderBrush="#FFE0E0E0" BorderThickness="1" Background="#FFF0F8FF">
                        <TextBlock Text="@FACILITY_CODE" FontSize="9" Foreground="#FF495057" VerticalAlignment="Center" Margin="5,0"/>
                    </Border>

                    <Border Grid.Column="3" Grid.Row="3" BorderBrush="#FFE0E0E0" BorderThickness="1" Background="#FFF8F9FA">
                        <TextBlock Text="W/O" FontWeight="SemiBold" VerticalAlignment="Center" Margin="5,0" FontSize="11"/>
                    </Border>
                    <Border Grid.Column="4" Grid.Row="3" BorderBrush="#FFE0E0E0" BorderThickness="1">
                        <TextBox x:Name="WorkOrderTextBox" Height="28" VerticalContentAlignment="Center" Margin="5" FontSize="11"/>
                    </Border>
                    <Border Grid.Column="5" Grid.Row="3" BorderBrush="#FFE0E0E0" BorderThickness="1" Background="#FFF0F8FF">
                        <TextBlock Text="@WORK_ORDER_ID" FontSize="9" Foreground="#FF495057" VerticalAlignment="Center" Margin="5,0"/>
                    </Border>

                    <Border Grid.Column="6" Grid.Row="3" BorderBrush="#FFE0E0E0" BorderThickness="1" Background="#FFF8F9FA">
                        <TextBlock Text="W/O 명" FontWeight="SemiBold" VerticalAlignment="Center" Margin="5,0" FontSize="11"/>
                    </Border>
                    <Border Grid.Column="7" Grid.Row="3" BorderBrush="#FFE0E0E0" BorderThickness="1">
                        <TextBox x:Name="WorkOrderNameTextBox" Height="28" VerticalContentAlignment="Center" Margin="5" FontSize="11"/>
                    </Border>
                    <Border Grid.Column="8" Grid.Row="3" BorderBrush="#FFE0E0E0" BorderThickness="1" Background="#FFF0F8FF">
                        <TextBlock Text="@WORK_ORDER_NAME" FontSize="9" Foreground="#FF495057" VerticalAlignment="Center" Margin="5,0"/>
                    </Border>

                    <!-- Row 4: Model.Suffix | LOT ID | 설비 ID -->
                    <Border Grid.Column="0" Grid.Row="4" BorderBrush="#FFE0E0E0" BorderThickness="1" Background="#FFF8F9FA">
                        <TextBlock Text="Model.Suffix" FontWeight="SemiBold" VerticalAlignment="Center" Margin="5,0" FontSize="11"/>
                    </Border>
                    <Border Grid.Column="1" Grid.Row="4" BorderBrush="#FFE0E0E0" BorderThickness="1">
                        <TextBox x:Name="ModelSuffixTextBox" Height="28" VerticalContentAlignment="Center" Margin="5" FontSize="11"/>
                    </Border>
                    <Border Grid.Column="2" Grid.Row="4" BorderBrush="#FFE0E0E0" BorderThickness="1" Background="#FFF0F8FF">
                        <TextBlock Text="@PRODUCT_SPECIFICATION_ID" FontSize="9" Foreground="#FF495057" VerticalAlignment="Center" Margin="5,0"/>
                    </Border>

                    <Border Grid.Column="3" Grid.Row="4" BorderBrush="#FFE0E0E0" BorderThickness="1" Background="#FFF8F9FA">
                        <TextBlock Text="LOT ID" FontWeight="SemiBold" VerticalAlignment="Center" Margin="5,0" FontSize="11"/>
                    </Border>
                    <Border Grid.Column="4" Grid.Row="4" BorderBrush="#FFE0E0E0" BorderThickness="1">
                        <TextBox x:Name="LotIdTextBox" Height="28" VerticalContentAlignment="Center" Margin="5" FontSize="11"/>
                    </Border>
                    <Border Grid.Column="5" Grid.Row="4" BorderBrush="#FFE0E0E0" BorderThickness="1" Background="#FFF0F8FF">
                        <TextBlock Text="@LOT_ID" FontSize="9" Foreground="#FF495057" VerticalAlignment="Center" Margin="5,0"/>
                    </Border>

                    <Border Grid.Column="6" Grid.Row="4" BorderBrush="#FFE0E0E0" BorderThickness="1" Background="#FFF8F9FA">
                        <TextBlock Text="설비 ID" FontWeight="SemiBold" VerticalAlignment="Center" Margin="5,0" FontSize="11"/>
                    </Border>
                    <Border Grid.Column="7" Grid.Row="4" BorderBrush="#FFE0E0E0" BorderThickness="1">
                        <TextBox x:Name="EquipmentIdTextBox" Height="28" VerticalContentAlignment="Center" Margin="5" FontSize="11"/>
                    </Border>
                    <Border Grid.Column="8" Grid.Row="4" BorderBrush="#FFE0E0E0" BorderThickness="1" Background="#FFF0F8FF">
                        <TextBlock Text="@EQUIPMENT_ID" FontSize="9" Foreground="#FF495057" VerticalAlignment="Center" Margin="5,0"/>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <!-- 하단 그리드 영역 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" MinWidth="200"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <GridSplitter Grid.Column="1" 
                          Width="5" 
                          HorizontalAlignment="Stretch" 
                          Background="#FFE0E0E0"/>

            <!-- 왼쪽: 계획정보 -->
            <Border Grid.Column="0" 
                    Background="White" 
                    BorderBrush="#FFE0E0E0" 
                    BorderThickness="1" 
                    CornerRadius="8"
                    Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 제목 -->
                    <TextBlock Grid.Row="0"
                               Text="계획정보" 
                               FontSize="14" 
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <!-- 쿼리 로드 + 조회 쿼리 + 조회 버튼 -->
                    <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,10">
                        <!-- 쿼리 로드 버튼 -->
                        <Button x:Name="LoadQueriesButton" 
                                Height="40"
                                Click="LoadQueriesButton_Click"
                                Background="#FF28A745" 
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                FontWeight="Bold"
                                FontSize="13"
                                Margin="0,0,0,10">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="🔄" FontSize="16" Margin="0,0,5,0"/>
                                <TextBlock Text="쿼리 로드"/>
                            </StackPanel>
                        </Button>

                        <!-- 조회 쿼리 선택 -->
                        <TextBlock Text="계획정보 쿼리:" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"/>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <ComboBox x:Name="QuerySelectComboBox" 
                                      Grid.Column="0"
                                      Height="32"
                                      DisplayMemberPath="QueryName"
                                      Margin="0,0,5,0"/>
                            <Button x:Name="ClearQuerySelectButton"
                                    Grid.Column="1"
                                    Content="✖"
                                    Width="28" Height="32"
                                    Click="ClearQuerySelectButton_Click"
                                    Background="#FFDC3545"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    FontWeight="Bold"
                                    ToolTip="선택 취소"/>
                        </Grid>

                        <!-- 조회 버튼 -->
                        <Button x:Name="ExecuteQueryButton" 
                                Height="40"
                                Click="ExecuteQueryButton_Click"
                                Background="#FF0078D7" 
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                FontWeight="Bold"
                                FontSize="13">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Text="▶" FontSize="16" Margin="0,0,5,0"/>
                                <TextBlock Text="조회"/>
                            </StackPanel>
                        </Button>
                        
                        <!-- 결과 정보 -->
                        <TextBlock x:Name="PlanInfoResultTextBlock"
                                   FontSize="10"
                                   Foreground="#FF6C757D"
                                   Margin="0,10,0,0"
                                   TextAlignment="Center"
                                   Text=""/>
                    </StackPanel>

                    <!-- DataGrid -->
                    <DataGrid x:Name="PlanInfoDataGrid" 
                              Grid.Row="2"
                              AutoGenerateColumns="True"
                              IsReadOnly="False"
                              AlternatingRowBackground="#FFF8F9FA"
                              GridLinesVisibility="All"
                              HeadersVisibility="All"
                              BorderThickness="1"
                              BorderBrush="#FFE0E0E0"
                              Margin="0,0,0,10"
                              FontSize="10"
                              LoadingRow="DataGrid_LoadingRow"
                              ClipboardCopyMode="ExcludeHeader"
                              SelectionMode="Extended"
                              SelectionUnit="FullRow"
                              BeginningEdit="PlanInfoDataGrid_BeginningEdit">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#FF0078D7"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="FontSize" Value="10"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                    </DataGrid>

                    <!-- Excel 다운로드 버튼 -->
                    <Button x:Name="ExportToExcelButton" 
                            Grid.Row="3"
                            Height="40"
                            Click="ExportToExcelButton_Click"
                            Background="#FF28A745" 
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            FontWeight="Bold"
                            FontSize="13"
                            Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="📊" FontSize="16" Margin="0,0,5,0"/>
                            <TextBlock Text="Excel 다운로드"/>
                        </StackPanel>
                    </Button>

                    <!-- 전체 조회 버튼 -->
                    <Button x:Name="ExecuteAllGridsButton" 
                            Grid.Row="4"
                            Height="40"
                            Click="ExecuteAllGridsButton_Click"
                            Background="#FFDC3545" 
                            Foreground="White"
                            BorderThickness="0"
                            Cursor="Hand"
                            FontWeight="Bold"
                            FontSize="13"
                            Margin="0,0,0,10">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="⚡" FontSize="16" Margin="0,0,5,0"/>
                            <TextBlock Text="선택 행 기준 전체 조회"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>

            <!-- 오른쪽: 동적 그리드 영역 -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 동적 그리드 설정 영역 -->
                <Border Grid.Row="0" 
                        Background="White" 
                        BorderBrush="#FFE0E0E0" 
                        BorderThickness="1" 
                        CornerRadius="8"
                        Padding="10"
                        Margin="5,0,5,10">
                    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left">
                        <!-- 폰트 크기 조절 -->
                        <Border BorderBrush="#FF0078D7" 
                                BorderThickness="2" 
                                CornerRadius="8" 
                                Padding="10,5">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="폰트:" 
                                           VerticalAlignment="Center" 
                                           FontWeight="Bold"
                                           Margin="0,0,10,0"/>
                                <Button x:Name="DecreaseFontButton" 
                                        Content="-"
                                        Width="32" Height="32"
                                        Click="DecreaseFontButton_Click"
                                        Background="#FF6C757D"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        FontWeight="Bold"
                                        FontSize="16"
                                        Margin="0,0,5,0"/>
                                <TextBlock x:Name="FontSizeTextBlock"
                                           Text="16"
                                           Width="30"
                                           TextAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontWeight="Bold"
                                           FontSize="16"
                                           Margin="0,0,5,0"/>
                                <Button x:Name="IncreaseFontButton" 
                                        Content="+"
                                        Width="32" Height="32"
                                        Click="IncreaseFontButton_Click"
                                        Background="#FF6C757D"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        FontWeight="Bold"
                                        FontSize="16"/>
                            </StackPanel>
                        </Border>
                    </WrapPanel>
                </Border>

                <!-- 동적 그리드 스크롤 영역 -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Padding="5"
                              x:Name="GridScrollViewer">
                    <Grid x:Name="DynamicGridsContainer">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
