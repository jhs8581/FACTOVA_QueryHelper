<UserControl x:Class="FACTOVA_QueryHelper.Controls.QueryInTransformView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FACTOVA_QueryHelper.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             Background="#FFF8F9FA">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Margin="0,0,0,15" Padding="15" 
                Background="#E3F2FD" BorderBrush="#2196F3" BorderThickness="2" CornerRadius="5">
            <StackPanel>
                <TextBlock Text="🔄 IN 조건 변환" 
                           FontSize="18" FontWeight="Bold" 
                           Foreground="#1976D2" Margin="0,0,0,5"/>
                <TextBlock Text="여러 줄의 값을 입력하면 SQL IN 조건 형식으로 변환됩니다. (예: '1', '2', '3')" 
                           FontSize="11" Foreground="Gray" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Input Section -->
        <GroupBox Header="📝 입력 데이터" Grid.Row="1" Margin="0,0,0,10"
                  BorderBrush="#CCCCCC" BorderThickness="1">
            <GroupBox.HeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" FontWeight="Bold" Foreground="#2C5AA0" FontSize="13"/>
                </DataTemplate>
            </GroupBox.HeaderTemplate>
            <TextBox x:Name="InputTextBox"
                     FontFamily="Consolas"
                     FontSize="13"
                     AcceptsReturn="True"
                     TextWrapping="NoWrap"
                     HorizontalScrollBarVisibility="Auto"
                     VerticalScrollBarVisibility="Auto"
                     Background="White"
                     Padding="10"/>
        </GroupBox>

        <!-- Transform Button -->
        <Border Grid.Row="2" Padding="10" Margin="0,5"
                Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="3">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="TransformButton" 
                        Content="🔄 IN 조건 변환" 
                        Width="150" Height="40"
                        Background="#FF2196F3" 
                        Foreground="White" 
                        FontWeight="Bold" 
                        FontSize="14"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="TransformButton_Click"
                        ToolTip="각 줄의 값을 SQL IN 조건 형식으로 변환합니다"/>
                
                <Button x:Name="ClearButton" 
                        Content="🗑️ 초기화" 
                        Width="120" Height="40"
                        Margin="10,0,0,0"
                        Background="#FFDC3545" 
                        Foreground="White" 
                        FontWeight="Bold" 
                        FontSize="13"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="ClearButton_Click"
                        ToolTip="입력과 출력을 모두 초기화합니다"/>
                
                <Button x:Name="CopyButton" 
                        Content="📋 복사" 
                        Width="120" Height="40"
                        Margin="10,0,0,0"
                        Background="#FF28A745" 
                        Foreground="White" 
                        FontWeight="Bold" 
                        FontSize="13"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="CopyButton_Click"
                        ToolTip="변환된 결과를 클립보드에 복사합니다"/>
            </StackPanel>
        </Border>

        <!-- Output Section -->
        <GroupBox Header="📤 변환 결과" Grid.Row="3" Margin="0,10,0,0"
                  BorderBrush="#CCCCCC" BorderThickness="1">
            <GroupBox.HeaderTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" FontWeight="Bold" Foreground="#2C5AA0" FontSize="13"/>
                </DataTemplate>
            </GroupBox.HeaderTemplate>
            <TextBox x:Name="OutputTextBox"
                     FontFamily="Consolas"
                     FontSize="13"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     IsReadOnly="True"
                     HorizontalScrollBarVisibility="Auto"
                     VerticalScrollBarVisibility="Auto"
                     Background="#F9F9F9"
                     Padding="10"/>
        </GroupBox>
    </Grid>
</UserControl>
