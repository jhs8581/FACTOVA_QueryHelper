<UserControl x:Class="FACTOVA_QueryHelper.Controls.SqlEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FACTOVA_QueryHelper.Controls"
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!-- SQL Editor with AvalonEdit -->
        <avalonedit:TextEditor x:Name="SqlTextEditor"
                               FontFamily="Consolas"
                               FontSize="11"
                               ShowLineNumbers="True"
                               WordWrap="False"
                               HorizontalScrollBarVisibility="Auto"
                               VerticalScrollBarVisibility="Auto"
                               Background="White"
                               TextChanged="SqlTextEditor_TextChanged"
                               PreviewKeyDown="SqlTextEditor_PreviewKeyDown"
                               MouseRightButtonUp="SqlTextEditor_MouseRightButtonUp">
            <!-- 🔥 Context Menu 추가 -->
            <avalonedit:TextEditor.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="🔍 찾기 (Ctrl+F)" Click="FindMenuItem_Click" FontWeight="Bold"/>
                    <Separator/>
                    <MenuItem Header="📋 IN 조건 변환" Click="InConditionTransform_Click">
                        <MenuItem.ToolTip>
                            <TextBlock>
                                선택한 텍스트를 IN 조건 형식으로 변환합니다<LineBreak/>
                                예: value1&#x0a;value2 → 'value1', 'value2'
                            </TextBlock>
                        </MenuItem.ToolTip>
                    </MenuItem>
                    <MenuItem Header="🔢 MULTI_ITEM 변환" Click="MultiItemTransform_Click">
                        <MenuItem.ToolTip>
                            <TextBlock>
                                변수명을 MULTI_ITEM 쿼리로 변환합니다<LineBreak/>
                                예: @VAR → SELECT ITEM_VALUE FROM TABLE(...)
                            </TextBlock>
                        </MenuItem.ToolTip>
                    </MenuItem>
                    <Separator/>
                    <MenuItem Header="🌐 다국어 변환 (FN_GET_NAME_BY_LANGID)" Click="MultiLangTransform_Click"/>
                    <MenuItem Header="📖 다국어 단어 (FN_GET_MULTI_LANG_DICT)" Click="MultiLangDict_Click"/>
                </ContextMenu>
            </avalonedit:TextEditor.ContextMenu>
        </avalonedit:TextEditor>

        <!-- Autocomplete Popup -->
        <Popup x:Name="AutocompletePopup" 
               PlacementTarget="{Binding ElementName=SqlTextEditor}"
               Placement="Relative"
               StaysOpen="False"
               AllowsTransparency="True">
            <Border Background="White" 
                    BorderBrush="#FF0078D7" 
                    BorderThickness="2" 
                    CornerRadius="3"
                    MaxHeight="300"
                    MinWidth="400">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                            Background="#FF0078D7" 
                            Padding="8,4">
                        <TextBlock x:Name="AutocompleteHeaderText" 
                                   Text="Columns" 
                                   Foreground="White" 
                                   FontWeight="Bold" 
                                   FontSize="11"/>
                    </Border>

                    <ListBox x:Name="AutocompleteListBox" 
                             Grid.Row="1"
                             MaxHeight="250"
                             FontFamily="Consolas"
                             FontSize="11"
                             SelectionMode="Single"
                             MouseDoubleClick="AutocompleteListBox_MouseDoubleClick"
                             PreviewKeyDown="AutocompleteListBox_PreviewKeyDown">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding ColumnName}" 
                                               FontWeight="Bold" 
                                               Foreground="#FF0078D7"
                                               Width="250"/>
                                    <TextBlock Text="{Binding DataType}" 
                                               Foreground="Gray" 
                                               Margin="10,0,0,0"
                                               Width="80"/>
                                    <TextBlock Text="{Binding Comments}" 
                                               Foreground="DarkGreen" 
                                               Margin="10,0,0,0"
                                               TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
        </Popup>
    </Grid>
</UserControl>
