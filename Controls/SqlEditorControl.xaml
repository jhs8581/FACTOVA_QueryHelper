<UserControl x:Class="FACTOVA_QueryHelper.Controls.SqlEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FACTOVA_QueryHelper.Controls"
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!-- SQL Editor with AvalonEdit -->
        <avalonedit:TextEditor x:Name="SqlTextEditor"
                               FontFamily="Consolas"
                               FontSize="11"
                               ShowLineNumbers="True"
                               WordWrap="False"
                               HorizontalScrollBarVisibility="Auto"
                               VerticalScrollBarVisibility="Auto"
                               Background="White"
                               TextChanged="SqlTextEditor_TextChanged"
                               PreviewKeyDown="SqlTextEditor_PreviewKeyDown"
                               MouseRightButtonUp="SqlTextEditor_MouseRightButtonUp">
            
        </avalonedit:TextEditor>

        <!-- Autocomplete Popup -->
        <Popup x:Name="AutocompletePopup" 
               PlacementTarget="{Binding ElementName=SqlTextEditor}"
               Placement="Relative"
               StaysOpen="False"
               AllowsTransparency="True">
            <Border Background="White" 
                    BorderBrush="#FF0078D7" 
                    BorderThickness="2" 
                    CornerRadius="3"
                    MaxHeight="300"
                    MinWidth="400">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                            Background="#FF0078D7" 
                            Padding="8,4">
                        <TextBlock x:Name="AutocompleteHeaderText" 
                                   Text="Columns" 
                                   Foreground="White" 
                                   FontWeight="Bold" 
                                   FontSize="11"/>
                    </Border>

                    <ListBox x:Name="AutocompleteListBox" 
                             Grid.Row="1"
                             MaxHeight="250"
                             FontFamily="Consolas"
                             FontSize="11"
                             SelectionMode="Single"
                             MouseDoubleClick="AutocompleteListBox_MouseDoubleClick"
                             PreviewKeyDown="AutocompleteListBox_PreviewKeyDown">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding ColumnName}" 
                                               FontWeight="Bold" 
                                               Foreground="#FF0078D7"
                                               Width="250"/>
                                    <TextBlock Text="{Binding DataType}" 
                                               Foreground="Gray" 
                                               Margin="10,0,0,0"
                                               Width="80"/>
                                    <TextBlock Text="{Binding Comments}" 
                                               Foreground="DarkGreen" 
                                               Margin="10,0,0,0"
                                               TextTrimming="CharacterEllipsis"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
        </Popup>
    </Grid>
</UserControl>
