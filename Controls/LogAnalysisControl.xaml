<UserControl x:Class="FACTOVA_QueryHelper.Controls.LogAnalysisControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <GroupBox Header="Excel Query File Settings" Grid.Row="0" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Excel File:" VerticalAlignment="Center" Grid.Column="0" Margin="0,0,10,0"/>
                    <TextBox x:Name="ExcelFilePathTextBox" Grid.Column="1" Margin="5" 
                             IsReadOnly="True" VerticalAlignment="Center"/>
                    <Button x:Name="BrowseExcelButton" Grid.Column="2" Content="Browse..." 
                            Width="100" Height="30" Margin="5"
                            Click="BrowseExcelButton_Click"/>
                </Grid>

                <Grid Grid.Row="1" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Sheet:" VerticalAlignment="Center" Grid.Column="0" Margin="0,0,10,0"/>
                    <ComboBox x:Name="SheetComboBox" Grid.Column="1" Margin="5" VerticalAlignment="Center"/>

                    <TextBlock Text="Start Row:" VerticalAlignment="Center" Grid.Column="2" Margin="20,0,10,0"/>
                    <TextBox x:Name="StartRowTextBox" Grid.Column="3" Margin="5" Text="2" VerticalAlignment="Center"/>

                    <TextBlock Text="(Excluding header row)" VerticalAlignment="Center" Grid.Column="4" Margin="10,0,10,0" 
                               FontSize="11" Foreground="Gray"/>
                </Grid>

                <Expander Grid.Row="2" Margin="0,10,0,0" 
                          IsExpanded="False"
                          BorderBrush="#FF0078D7" 
                          BorderThickness="1">
                    <Expander.Header>
                        <TextBlock Text="Excel Column Structure - Click to expand" 
                                   FontWeight="Bold" 
                                   Foreground="#FF0078D7"/>
                    </Expander.Header>
                    <Border Background="#FFF0F8FF" 
                            Padding="15"
                            CornerRadius="0,0,5,5">
                        <TextBlock FontSize="11" LineHeight="18" TextWrapping="Wrap">
                            A: TNS Name | B: User ID | C: Password | D: Tab Name | F: SQL Query | G: Execute Flag (Y/N) | H: Notify Flag (Y/N) | I: Greater Than Count | J: Equal Count | K: Less Than Count | L: Column Names | M: Column Values | N: Exclude Flag
                        </TextBlock>
                    </Border>
                </Expander>

                <Grid Grid.Row="3" Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,5">
                        <TextBlock Text="Loaded Queries:" VerticalAlignment="Center" Margin="10,0,10,0"/>
                        <TextBlock x:Name="LoadedQueriesTextBlock" Text="0" VerticalAlignment="Center" 
                                   FontWeight="Bold" Foreground="#FF0078D7"/>
                        
                        <TextBlock Text="Execute Queries:" VerticalAlignment="Center" Margin="20,0,10,0"/>
                        <ComboBox x:Name="QueryFilterComboBox" Width="300" Margin="5,0,10,0" VerticalAlignment="Center"
                                  IsEditable="True"
                                  IsReadOnly="True"
                                  DropDownClosed="QueryFilterComboBox_DropDownClosed">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Text}" 
                                              IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                              Checked="QueryFilterCheckBox_Changed"
                                              Unchecked="QueryFilterCheckBox_Changed"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <Button x:Name="LoadQueriesButton" Content="Load Queries" 
                                Width="100" Height="30" Margin="5,0,10,0"
                                Click="LoadQueriesButton_Click"
                                Background="#FF0078D7" 
                                Foreground="White"
                                FontWeight="Bold"
                                IsEnabled="False"/>
                        <Button x:Name="ExecuteAllButton" Content="Execute Selected" 
                                Width="130" Height="30" Margin="5,0,10,0"
                                Click="ExecuteAllButton_Click"
                                Background="#FF28A745" 
                                Foreground="White"
                                FontWeight="Bold"
                                IsEnabled="False"/>
                                
                        <Button x:Name="ClearResultsButton" Content="Clear Results" 
                                Width="100" Height="30" Margin="5,0,10,0"
                                Click="ClearResultsButton_Click"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Grid.Row="1">
                        <TextBlock Text="Interval:" VerticalAlignment="Center" Margin="5,0,10,0"/>
                        <TextBox x:Name="QueryIntervalTextBox" Width="60" Text="60" VerticalAlignment="Center"/>
                        <TextBlock Text="seconds" VerticalAlignment="Center" Margin="5,0,10,0"/>
                        
                        <Button x:Name="StartAutoQueryButton" Content="Start Auto" 
                                Width="120" Height="30" Margin="5,0,5,0"
                                Click="StartAutoQueryButton_Click"
                                Background="#FF0078D7" 
                                Foreground="White"
                                FontWeight="Bold"
                                IsEnabled="False"/>
                                
                        <Button x:Name="StopAutoQueryButton" Content="Stop Auto" 
                                Width="120" Height="30" Margin="5,0,15,0"
                                Click="StopAutoQueryButton_Click"
                                Background="#FFDC3545" 
                                Foreground="White"
                                FontWeight="Bold"
                                IsEnabled="False"/>
                        
                        <CheckBox x:Name="StopOnNotificationCheckBox" 
                                  Content="Stop on notification" 
                                  VerticalAlignment="Center"
                                  Margin="0,0,15,0"
                                  IsChecked="True"/>
                        
                        <Border x:Name="AutoQueryCountdownBorder"
                                Background="#FFF0F8FF" 
                                BorderBrush="#FF0078D7" 
                                BorderThickness="1" 
                                CornerRadius="3" 
                                Padding="8,4"
                                VerticalAlignment="Center"
                                Visibility="Collapsed">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Next execution: " 
                                           FontSize="11" 
                                           VerticalAlignment="Center"/>
                                <TextBlock x:Name="AutoQueryCountdownTextBlock" 
                                           FontSize="11" 
                                           FontWeight="Bold" 
                                           Foreground="#FF0078D7"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Grid>
        </GroupBox>

        <GroupBox Header="Query Results" Grid.Row="1" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TabControl x:Name="ResultTabControl" Grid.Row="0"/>

                <TextBlock x:Name="StatusTextBlock" 
                           Grid.Row="1" 
                           Margin="0,5,0,0" 
                           FontSize="11"
                           Foreground="Gray"/>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
