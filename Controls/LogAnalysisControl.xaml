<UserControl x:Class="FACTOVA_QueryHelper.Controls.LogAnalysisControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="White">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <GroupBox Header="쿼리 설정" Grid.Row="0" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 첫 번째 행: DB 로드 버튼 -->
                <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
                    <Button x:Name="LoadFromDbButton" Content="💾 DB에서 쿼리 로드" 
                            Width="150" Height="35" Margin="0,0,15,0"
                            Click="LoadFromDbButton_Click"
                            Background="#FF28A745" 
                            Foreground="White"
                            FontWeight="Bold"
                            FontSize="14"
                            ToolTip="데이터베이스에서 쿼리 목록 로드"/>
                    
                    <TextBlock Text="로드된 쿼리:" VerticalAlignment="Center" Margin="10,0,10,0" FontWeight="Bold"/>
                    <TextBlock x:Name="LoadedQueriesTextBlock" Text="0개" VerticalAlignment="Center" 
                               FontWeight="Bold" Foreground="#FF0078D7" FontSize="16"/>
                </StackPanel>

                <!-- 두 번째 행: 쿼리 실행 옵션 -->
                <Grid Grid.Row="1" Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,5">
                        <TextBlock Text="실행할 쿼리:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox x:Name="QueryFilterComboBox" Width="300" Margin="5,0,10,0" VerticalAlignment="Center"
                                  IsEditable="True"
                                  IsReadOnly="True"
                                  DropDownClosed="QueryFilterComboBox_DropDownClosed">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Text}" 
                                              IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                              Checked="QueryFilterCheckBox_Changed"
                                              Unchecked="QueryFilterCheckBox_Changed"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <TextBlock Text="디폴트 폼:" VerticalAlignment="Center" Margin="20,0,10,0"/>
                        <ComboBox x:Name="DefaultFormComboBox" Width="200" Margin="5,0,10,0" VerticalAlignment="Center"
                                  DisplayMemberPath="Text"
                                  ToolTip="디폴트로 설정할 폼을 선택하세요"/>
                        
                        <Button x:Name="ClearResultsButton" Content="결과 초기화" 
                                Width="100" Height="30" Margin="20,0,10,0"
                                Click="ClearResultsButton_Click"/>
                        
                        <!-- 폰트 크기 조절 -->
                        <TextBlock Text="폰트 크기:" VerticalAlignment="Center" Margin="20,0,10,0"/>
                        <Button x:Name="DecreaseFontButton" Content="-" 
                                Width="30" Height="30" Margin="0,0,5,0"
                                Click="DecreaseFontButton_Click"
                                ToolTip="폰트 크기 감소"/>
                        <TextBlock x:Name="FontSizeTextBlock" Text="11" 
                                   VerticalAlignment="Center" 
                                   FontWeight="Bold"
                                   Foreground="#FF0078D7"
                                   MinWidth="25"
                                   TextAlignment="Center"/>
                        <Button x:Name="IncreaseFontButton" Content="+" 
                                Width="30" Height="30" Margin="5,0,0,0"
                                Click="IncreaseFontButton_Click"
                                ToolTip="폰트 크기 증가"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Grid.Row="1">
                        <CheckBox x:Name="EnableAutoExecutionCheckBox" 
                                  Content="자동 실행" 
                                  VerticalAlignment="Center"
                                  Margin="5,0,15,0"
                                  IsChecked="False"
                                  Checked="EnableAutoExecutionCheckBox_Changed"
                                  Unchecked="EnableAutoExecutionCheckBox_Changed"
                                  ToolTip="체크하면 주기적으로 자동 실행됩니다"/>
                        
                        <TextBlock Text="실행 주기:" VerticalAlignment="Center" Margin="5,0,10,0"/>
                        <TextBox x:Name="QueryIntervalTextBox" Width="60" Text="60" VerticalAlignment="Center"
                                 IsEnabled="False"
                                 ToolTip="쿼리 실행 주기 (초)"/>
                        <TextBlock Text="초" VerticalAlignment="Center" Margin="5,0,10,0"/>
                        
                        <Button x:Name="ToggleAutoQueryButton" Content="실행" 
                                Width="100" Height="30" Margin="5,0,15,0"
                                Click="ToggleAutoQueryButton_Click"
                                Background="#FF0078D7" 
                                Foreground="White"
                                FontWeight="Bold"
                                IsEnabled="False"/>
                        
                        <CheckBox x:Name="StopOnNotificationCheckBox" 
                                  Content="알림 시 자동 실행 중지" 
                                  VerticalAlignment="Center"
                                  Margin="0,0,15,0"
                                  IsChecked="True"
                                  Checked="StopOnNotificationCheckBox_Changed"
                                  Unchecked="StopOnNotificationCheckBox_Changed"
                                  ToolTip="체크하면 알림 팝업이 표시될 때 자동 실행이 중지됩니다"/>
                        
                        <Border x:Name="AutoQueryCountdownBorder"
                                Background="#FFF0F8FF" 
                                BorderBrush="#FF0078D7" 
                                BorderThickness="1" 
                                CornerRadius="3" 
                                Padding="8,4"
                                VerticalAlignment="Center"
                                Visibility="Collapsed">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="다음 실행까지: " 
                                           FontSize="11" 
                                           VerticalAlignment="Center"/>
                                <TextBlock x:Name="AutoQueryCountdownTextBlock" 
                                           FontSize="11" 
                                           FontWeight="Bold" 
                                           Foreground="#FF0078D7"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Grid>
        </GroupBox>

        <GroupBox Header="쿼리 결과" Grid.Row="1" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TabControl x:Name="ResultTabControl" Grid.Row="0"/>

                <TextBlock x:Name="StatusTextBlock" 
                           Grid.Row="1" 
                           Margin="0,5,0,0" 
                           FontSize="11"
                           Foreground="Gray"/>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
