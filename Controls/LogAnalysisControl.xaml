<UserControl x:Class="FACTOVA_QueryHelper.Controls.LogAnalysisControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="White">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <GroupBox Header="Excel 쿼리 파일 설정" Grid.Row="0" Padding="10" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Excel 파일:" VerticalAlignment="Center" Grid.Column="0" Margin="0,0,10,0"/>
                    <TextBox x:Name="ExcelFilePathTextBox" Grid.Column="1" Margin="5" 
                             IsReadOnly="True" VerticalAlignment="Center"/>
                    <Button x:Name="BrowseExcelButton" Grid.Column="2" Content="찾아보기..." 
                            Width="100" Height="30" Margin="5"
                            Click="BrowseExcelButton_Click"/>
                </Grid>

                <Grid Grid.Row="1" Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="시트:" VerticalAlignment="Center" Grid.Column="0" Margin="0,0,10,0"/>
                    <ComboBox x:Name="SheetComboBox" Grid.Column="1" Margin="5" VerticalAlignment="Center"/>

                    <TextBlock Text="시작 행:" VerticalAlignment="Center" Grid.Column="2" Margin="20,0,10,0"/>
                    <TextBox x:Name="StartRowTextBox" Grid.Column="3" Margin="5" Text="2" VerticalAlignment="Center"
                             ToolTip="데이터 시작 행 번호 (헤더 제외)"/>

                    <TextBlock Text="(헤더 행 제외)" VerticalAlignment="Center" Grid.Column="4" Margin="10,0,10,0" 
                               FontSize="11" Foreground="Gray"/>
                </Grid>

                <Expander Grid.Row="2" Margin="0,10,0,0" 
                          IsExpanded="False"
                          BorderBrush="#FF0078D7" 
                          BorderThickness="1">
                    <Expander.Header>
                        <TextBlock Text="Excel 열 구조 (고정) - 클릭하여 펼치기/접기" 
                                   FontWeight="Bold" 
                                   Foreground="#FF0078D7"/>
                    </Expander.Header>
                    <Border Background="#FFF0F8FF" 
                            Padding="15"
                            CornerRadius="0,0,5,5">
                        <TextBlock FontSize="11" LineHeight="18" TextWrapping="Wrap">
                            • A열: TNS 이름 (예: GM2MRSP)
                            <LineBreak/>
                            • B열: User ID (DB 계정)
                            <LineBreak/>
                            • C열: Password (DB 비밀번호)
                            <LineBreak/>
                            • D열: 탭 이름 (결과 탭에 표시될 이름)
                            <LineBreak/>
                            • F열: SQL 쿼리
                            <LineBreak/>
                            • G열: 실행 여부 (Y/N, 빈 값은 Y로 간주)
                            <LineBreak/>
                            • H열: 알림 여부 (Y/N)
                            <LineBreak/>
                            • I열: 이상 건수 (N건 이상일 때 알림)
                            <LineBreak/>
                            • J열: 같음 건수 (정확히 N건일 때 알림)
                            <LineBreak/>
                            • K열: 이하 건수 (N건 이하일 때 알림)
                            <LineBreak/>
                            • L열: 컬럼명 (쉼표로 구분)
                            <LineBreak/>
                            • M열: 컬럼값 (쉼표로 구분)
                            <LineBreak/>
                            • N열: 제외 여부 (N이면 로드 시 제외)
                        </TextBlock>
                    </Border>
                </Expander>

                <Grid Grid.Row="3" Margin="0,10,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,5">
                        <TextBlock Text="로드된 쿼리:" VerticalAlignment="Center" Margin="10,0,10,0"/>
                        <TextBlock x:Name="LoadedQueriesTextBlock" Text="0개" VerticalAlignment="Center" 
                                   FontWeight="Bold" Foreground="#FF0078D7"/>
                        
                        <TextBlock Text="실행할 쿼리:" VerticalAlignment="Center" Margin="20,0,10,0"/>
                        <ComboBox x:Name="QueryFilterComboBox" Width="300" Margin="5,0,10,0" VerticalAlignment="Center"
                                  IsEditable="True"
                                  IsReadOnly="True"
                                  DropDownClosed="QueryFilterComboBox_DropDownClosed">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding Text}" 
                                              IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                              Checked="QueryFilterCheckBox_Changed"
                                              Unchecked="QueryFilterCheckBox_Changed"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <TextBlock Text="디폴트 폼:" VerticalAlignment="Center" Margin="20,0,10,0"/>
                        <ComboBox x:Name="DefaultFormComboBox" Width="200" Margin="5,0,10,0" VerticalAlignment="Center"
                                  DisplayMemberPath="Text"
                                  ToolTip="디폴트로 설정할 폼을 선택하세요"/>
                        
                        <Button x:Name="ClearResultsButton" Content="결과 초기화" 
                                Width="100" Height="30" Margin="20,0,10,0"
                                Click="ClearResultsButton_Click"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Grid.Row="1">
                        <CheckBox x:Name="EnableAutoExecutionCheckBox" 
                                  Content="자동 실행" 
                                  VerticalAlignment="Center"
                                  Margin="5,0,15,0"
                                  IsChecked="False"
                                  Checked="EnableAutoExecutionCheckBox_Changed"
                                  Unchecked="EnableAutoExecutionCheckBox_Changed"
                                  ToolTip="체크하면 주기적으로 자동 실행됩니다"/>
                        
                        <TextBlock Text="실행 주기:" VerticalAlignment="Center" Margin="5,0,10,0"/>
                        <TextBox x:Name="QueryIntervalTextBox" Width="60" Text="60" VerticalAlignment="Center"
                                 IsEnabled="False"
                                 ToolTip="쿼리 실행 주기 (초)"/>
                        <TextBlock Text="초" VerticalAlignment="Center" Margin="5,0,10,0"/>
                        
                        <Button x:Name="ToggleAutoQueryButton" Content="실행" 
                                Width="100" Height="30" Margin="5,0,15,0"
                                Click="ToggleAutoQueryButton_Click"
                                Background="#FF0078D7" 
                                Foreground="White"
                                FontWeight="Bold"
                                IsEnabled="False"/>
                        
                        <CheckBox x:Name="StopOnNotificationCheckBox" 
                                  Content="알림 시 자동 실행 중지" 
                                  VerticalAlignment="Center"
                                  Margin="0,0,15,0"
                                  IsChecked="True"
                                  Checked="StopOnNotificationCheckBox_Changed"
                                  Unchecked="StopOnNotificationCheckBox_Changed"
                                  ToolTip="체크하면 알림 팝업이 표시될 때 자동 실행이 중지됩니다"/>
                        
                        <Border x:Name="AutoQueryCountdownBorder"
                                Background="#FFF0F8FF" 
                                BorderBrush="#FF0078D7" 
                                BorderThickness="1" 
                                CornerRadius="3" 
                                Padding="8,4"
                                VerticalAlignment="Center"
                                Visibility="Collapsed">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="다음 실행까지: " 
                                           FontSize="11" 
                                           VerticalAlignment="Center"/>
                                <TextBlock x:Name="AutoQueryCountdownTextBlock" 
                                           FontSize="11" 
                                           FontWeight="Bold" 
                                           Foreground="#FF0078D7"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Grid>
        </GroupBox>

        <GroupBox Header="쿼리 결과" Grid.Row="1" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TabControl x:Name="ResultTabControl" Grid.Row="0"/>

                <TextBlock x:Name="StatusTextBlock" 
                           Grid.Row="1" 
                           Margin="0,5,0,0" 
                           FontSize="11"
                           Foreground="Gray"/>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
