<UserControl x:Class="FACTOVA_QueryHelper.Controls.GmesInfoControlNewNew"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:sys="clr-namespace:System;assembly=mscorlib"
         mc:Ignorable="d" 
         d:DesignHeight="700" d:DesignWidth="1200"
         Background="#FFF8F9FA">
<Grid Margin="10">
<Grid.RowDefinitions>
    <RowDefinition Height="Auto"/>
    <RowDefinition Height="Auto"/>
    <RowDefinition Height="*"/>
</Grid.RowDefinitions>

<!-- 상단 조회 영역 (접속 정보) -->
<Border Grid.Row="0" 
        x:Name="SearchConditionBorder"
        Background="White" 
        BorderBrush="#FFE0E0E0" 
        BorderThickness="1" 
        CornerRadius="8"
        Padding="15"
        Margin="0,0,0,10">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" BorderBrush="#FFE0E0E0" BorderThickness="1" Background="#FFF8F9FA">
            <TextBlock Text="접속 정보" FontWeight="SemiBold" VerticalAlignment="Center" Margin="10,5" FontSize="11"/>
        </Border>
        <Border Grid.Column="1" BorderBrush="#FFE0E0E0" BorderThickness="1">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                        
                <ComboBox x:Name="ConnectionInfoComboBox" 
                          Grid.Column="0"
                          Height="28" 
                          FontSize="11"
                          VerticalContentAlignment="Center"
                          DisplayMemberPath="Name"
                          Margin="0,0,5,0"
                          SelectionChanged="ConnectionInfoComboBox_SelectionChanged"
                          ToolTip="쿼리 실행에 사용할 접속 정보를 선택합니다"/>
                        
                <Button x:Name="RefreshConnectionButton"
                        Grid.Column="1"
                        Content="🔄"
                        Width="28"
                        Height="28"
                        Background="#FF28A745"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontSize="14"
                        ToolTip="접속 정보 새로고침"
                        Click="RefreshConnectionButton_Click"/>
            </Grid>
        </Border>
        
        <!-- 파라미터 패널 토글 버튼 -->
        <Button x:Name="ToggleParameterPanelButton"
                Grid.Column="3"
                Content="📋 파라미터 숨기기"
                Height="28"
                Click="ToggleParameterPanelButton_Click"
                Background="#FF6F42C1" 
                Foreground="White"
                BorderThickness="0"
                Cursor="Hand"
                FontWeight="Bold"
                FontSize="11"
                Padding="10,0"
                ToolTip="파라미터 패널 숨기기/보이기"/>
    </Grid>
</Border>

<!-- 폰트 크기 조절 (숨김) -->
<Border Grid.Row="1" 
        Background="White" 
        BorderBrush="#FFE0E0E0" 
        BorderThickness="1" 
        CornerRadius="8"
        Padding="10"
        Margin="0,0,0,10"
        Visibility="Collapsed">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
        <!-- 폰트 크기 조절 -->
        <Border BorderBrush="#FF0078D7" 
                BorderThickness="2" 
                CornerRadius="8" 
                Padding="8,4">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="폰트:" 
                           VerticalAlignment="Center" 
                           FontWeight="Bold"
                           FontSize="11"
                           Margin="0,0,8,0"/>
                <Button x:Name="DecreaseFontButton" 
                        Content="-"
                        Width="28" Height="28"
                        Click="DecreaseFontButton_Click"
                        Background="#FF6C757D"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontWeight="Bold"
                        FontSize="14"
                        Margin="0,0,5,0"/>
                <TextBlock x:Name="FontSizeTextBlock"
                           Text="16"
                           Width="28"
                           TextAlignment="Center"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           FontSize="14"
                           Margin="0,0,5,0"/>
                <Button x:Name="IncreaseFontButton" 
                        Content="+"
                        Width="28" Height="28"
                        Click="IncreaseFontButton_Click"
                        Background="#FF6C757D"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontWeight="Bold"
                        FontSize="14"/>
            </StackPanel>
        </Border>
    </StackPanel>
</Border>

<!-- 하단 그리드 영역 -->
<Grid Grid.Row="2">
    <Grid.ColumnDefinitions>
        <ColumnDefinition x:Name="ParameterColumn" Width="400" MinWidth="0"/>
        <ColumnDefinition Width="5"/>
        <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <GridSplitter Grid.Column="1" 
                  Width="5" 
                  HorizontalAlignment="Stretch" 
                  Background="#FFE0E0E0"/>

            <!-- 왼쪽: 기준정보 파라미터 그리드 -->
            <Border x:Name="ParameterPanel"
                    Grid.Column="0" 
                    Background="White" 
                    BorderBrush="#FFE0E0E0" 
                    BorderThickness="1" 
                    CornerRadius="8"
                    Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- 제목 및 버튼 그룹 -->
                        <Grid Grid.Row="0" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0"
                                       Text="📋 기준정보 파라미터" 
                                       FontSize="13" 
                                       FontWeight="Bold"
                                       VerticalAlignment="Center"/>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <!-- 🔥 추가/삭제/저장 버튼 제거 - 자동 추출 및 자동 저장으로 변경 -->
                            
                            <!-- XML 입력 버튼 -->
                            <Button x:Name="XmlInputButton" 
                                    Width="30" Height="30"
                                    Click="XmlInputButton_Click"
                                    Background="#FF6F42C1" 
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    FontWeight="Bold"
                                    FontSize="14"
                                    Margin="0,0,5,0"
                                    ToolTip="XML 입력">
                                <TextBlock Text="📝"/>
                            </Button>
                            
                            <!-- 값 초기화 버튼 -->
                            <Button x:Name="ClearValuesButton" 
                                    Width="30" Height="30"
                                    Click="ClearValuesButton_Click"
                                    Background="#FFFFC107" 
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    FontWeight="Bold"
                                    FontSize="14"
                                    Margin="0,0,5,0"
                                    ToolTip="모든 값 초기화">
                                <TextBlock Text="🔄"/>
                            </Button>
                            
                            <!-- 🔥 숨김: 파라미터 추가 버튼 (수동 추가가 필요한 경우용) -->
                            <Button x:Name="AddParameterButton" 
                                    Width="30" Height="30"
                                    Click="AddParameterButton_Click"
                                    Background="#FF28A745" 
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    FontWeight="Bold"
                                    FontSize="14"
                                    Margin="0,0,5,0"
                                    ToolTip="파라미터 수동 추가"
                                    Visibility="Collapsed">
                                <TextBlock Text="➕"/>
                            </Button>
                            
                            <!-- 🔥 숨김: 파라미터 삭제 버튼 -->
                            <Button x:Name="DeleteParameterButton" 
                                    Width="30" Height="30"
                                    Click="DeleteParameterButton_Click"
                                    Background="#FFDC3545" 
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    FontWeight="Bold"
                                    FontSize="14"
                                    Margin="0,0,5,0"
                                    ToolTip="파라미터 삭제"
                                    IsEnabled="False"
                                    Visibility="Collapsed">
                                <TextBlock Text="🗑️"/>
                            </Button>
                            
                            <!-- 🔥 숨김: 색상 초기화 버튼 -->
                            <Button x:Name="ClearHighlightButton" 
                                    Width="30" Height="30"
                                    Click="ClearHighlightButton_Click"
                                    Background="#FF6C757D" 
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    FontWeight="Bold"
                                    FontSize="14"
                                    Margin="0,0,5,0"
                                    ToolTip="파라미터 색상 초기화"
                                    Visibility="Collapsed">
                                <TextBlock Text="🎨"/>
                            </Button>
                            
                            <!-- 🔥 숨김: 파라미터 저장 버튼 (자동 저장으로 대체) -->
                            <Button x:Name="SaveParametersButton" 
                                    Width="30" Height="30"
                                    Click="SaveParametersButton_Click"
                                    Background="#FF0078D7" 
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    FontWeight="Bold"
                                    FontSize="14"
                                    ToolTip="변경사항 저장"
                                    Visibility="Collapsed">
                                <TextBlock Text="💾"/>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!-- 파라미터 그리드 (파라미터 / 값 / 설명) -->
                    <DataGrid x:Name="PlanInfoDataGrid" 
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              AlternatingRowBackground="#FFF8F9FA"
                              GridLinesVisibility="All"
                              HeadersVisibility="All"
                              BorderThickness="1"
                              BorderBrush="#FFE0E0E0"
                              FontSize="12"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto"
                              LoadingRow="DataGrid_LoadingRow"
                              ClipboardCopyMode="ExcludeHeader"
                              SelectionMode="Single"
                              SelectionUnit="Cell"
                              CanUserResizeColumns="True"
                              CanUserReorderColumns="False"
                              CanUserSortColumns="False"
                              SelectionChanged="PlanInfoDataGrid_SelectionChanged"
                              PreviewMouseLeftButtonDown="PlanInfoDataGrid_PreviewMouseLeftButtonDown">
                        <!-- 🔥 CellStyle은 App.xaml 전역 스타일 사용 -->
                        <DataGrid.Columns>
                            <!-- 파라미터 컬럼 (편집 가능) -->
                            <DataGridTemplateColumn Header="파라미터" Width="190">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Padding="5,0">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#FFE3F2FD"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsHighlighted}" Value="True">
                                                            <Setter Property="Background" Value="#FFF08080"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding Parameter}" 
                                                       VerticalAlignment="Center"
                                                       FontWeight="Bold">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="Black"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsHighlighted}" Value="True">
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding Parameter, UpdateSourceTrigger=PropertyChanged}" 
                                                 FontWeight="Bold"
                                                 VerticalContentAlignment="Center">
                                            <TextBox.Style>
                                                <Style TargetType="TextBox">
                                                    <Setter Property="Background" Value="#FFBBDEFB"/>
                                                    <Setter Property="Foreground" Value="Black"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsHighlighted}" Value="True">
                                                            <Setter Property="Background" Value="#FFF08080"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBox.Style>
                                        </TextBox>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                            
                            <!-- 값 컬럼 (편집 가능) -->
                            <DataGridTemplateColumn Header="값" Width="140">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="#FFFFFFE0" Padding="5,0">
                                            <TextBlock Text="{Binding Value}" 
                                                       VerticalAlignment="Center"
                                                       Foreground="Black"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" 
                                                 Background="#FFFFFF99"
                                                 Foreground="Black"
                                                 VerticalContentAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                            
                            <!-- 설명 컬럼 (편집 가능) -->
                            <DataGridTemplateColumn Header="설명" Width="250">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Background="#FFF5F5F5" Padding="5,0">
                                            <TextBlock Text="{Binding Description}" 
                                                       VerticalAlignment="Center"
                                                       Foreground="Black"
                                                       TextWrapping="NoWrap"
                                                       TextTrimming="CharacterEllipsis"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                <DataGridTemplateColumn.CellEditingTemplate>
                                    <DataTemplate>
                                        <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                                                 Background="#FFE0E0E0"
                                                 Foreground="Black"
                                                 VerticalContentAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellEditingTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <!-- 결과 텍스트 -->
                    <TextBlock x:Name="ParameterStatusTextBlock"
                               Grid.Row="2"
                               FontSize="10"
                               Foreground="#FF6C757D"
                               Margin="0,5,0,0"
                               TextAlignment="Center"
                               Text=""
                               FontWeight="Normal"/>
                </Grid>
            </Border>

            <!-- 오른쪽: 동적 그리드 영역 -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 기준정보 선택 영역 -->
                <Border Grid.Row="0" 
                        Background="White" 
                        BorderBrush="#FFE0E0E0" 
                        BorderThickness="1" 
                        CornerRadius="8"
                        Padding="10"
                        Margin="5,0,5,10">
                    <Border BorderBrush="#FF28A745" 
                            BorderThickness="2" 
                            CornerRadius="8" 
                            Padding="10,5">
                        <StackPanel Orientation="Horizontal">
                            <!-- 쿼리 로드 버튼 (아이콘만) -->
                            <Button x:Name="LoadQueriesButton" 
                                    Width="32" Height="32"
                                    Click="LoadQueriesButton_Click"
                                    Background="#FF28A745" 
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    FontSize="14"
                                    Margin="0,0,10,0"
                                    ToolTip="쿼리 로드">
                                <TextBlock Text="🔄"/>
                            </Button>
                            
                            <TextBlock Text="기준정보:" 
                                       VerticalAlignment="Center" 
                                       FontWeight="Bold"
                                       Margin="0,0,10,0"/>
                            <ComboBox x:Name="QuerySelectComboBox" 
                                      Width="300"
                                      Height="32"
                                      VerticalContentAlignment="Center"
                                      DisplayMemberPath="QueryName"
                                      Margin="0,0,5,0"
                                      VerticalAlignment="Center"/>
                            
                            <Button x:Name="ClearQuerySelectButton"
                                    Content="✖"
                                    Width="32" Height="32"
                                    Click="ClearQuerySelectButton_Click"
                                    Background="#FFDC3545"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    FontWeight="Bold"
                                    ToolTip="선택 취소"
                                    Margin="0,0,10,0"/>
                            
                            <!-- 파라미터 확인 버튼 -->
                            <Button x:Name="ValidateParametersButton" 
                                    Width="120"
                                    Height="32"
                                    Click="ValidateParametersButton_Click"
                                    Background="#FF0078D7" 
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    FontWeight="Bold"
                                    FontSize="11"
                                    ToolTip="선택된 쿼리의 파라미터를 검증합니다"
                                    Margin="0,0,10,0">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="✔️" FontSize="12" Margin="0,0,5,0"/>
                                    <TextBlock Text="파라미터 확인"/>
                                </StackPanel>
                            </Button>
                            
                            <!-- 전체 조회 버튼 -->
                            <Button x:Name="ExecuteAllGridsButton" 
                                    Width="100"
                                    Height="32"
                                    Background="#FFDC3545" 
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    FontWeight="Bold"
                                    FontSize="11"
                                    Click="ExecuteAllGridsButton_Click"
                                    Margin="0,0,10,0">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="⚡" FontSize="12" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="전체 조회" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            
                            <!-- Excel 다운로드 버튼 -->
                            <Button x:Name="ExportToExcelButton" 
                                    Height="32"
                                    Click="ExportToExcelButton_Click"
                                    Background="#FF28A745" 
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    FontWeight="Bold"
                                    FontSize="11"
                                    Padding="10,0"
                                    ToolTip="Excel 다운로드">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="📊" FontSize="12" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Excel" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Border>
                </Border>

                <!-- 동적 그리드 탭 영역 -->
                <TabControl x:Name="DynamicGridsTabControl"
                            Grid.Row="1"
                            Margin="5"
                            Background="White"
                            BorderBrush="#FFE0E0E0"
                            BorderThickness="1">
                </TabControl>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
