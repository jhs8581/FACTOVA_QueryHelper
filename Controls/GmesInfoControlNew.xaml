<UserControl x:Class="FACTOVA_QueryHelper.Controls.GmesInfoControlNewNew"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="#FFF8F9FA">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 상단 조회 영역 (쿼리 로드 + 사업장) -->
        <Border Grid.Row="0" 
                x:Name="SearchConditionBorder"
                Background="White" 
                BorderBrush="#FFE0E0E0" 
                BorderThickness="1" 
                CornerRadius="8"
                Padding="15"
                Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="400"/>
                </Grid.ColumnDefinitions>

                <!-- 쿼리 로드 버튼 -->
                <Button x:Name="LoadQueriesButton" 
                        Grid.Column="0"
                        Height="38"
                        Click="LoadQueriesButton_Click"
                        Background="#FF28A745" 
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontWeight="Bold"
                        FontSize="12"
                        Padding="10,0"
                        Margin="0,0,10,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🔄" FontSize="16" Margin="0,0,5,0"/>
                        <TextBlock Text="쿼리 로드"/>
                    </StackPanel>
                </Button>

                <Border Grid.Column="1" BorderBrush="#FFE0E0E0" BorderThickness="1" Background="#FFF8F9FA">
                    <TextBlock Text="사업장" FontWeight="SemiBold" VerticalAlignment="Center" Margin="10,5" FontSize="11"/>
                </Border>
                <Border Grid.Column="2" BorderBrush="#FFE0E0E0" BorderThickness="1">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <ComboBox x:Name="SiteComboBox" 
                                  Grid.Column="0"
                                  Height="28" 
                                  FontSize="11"
                                  DisplayMemberPath="DisplayText"
                                  Margin="0,0,5,0"
                                  SelectionChanged="SiteComboBox_SelectionChanged"
                                  ToolTip="치환: @REPRESENTATIVE_FACTORY_CODE, @ORGANIZATION_ID, @FACILITY_CODE, @WIP_LINE_ID, @LINE_ID"/>
                        
                        <Button x:Name="RefreshSiteButton"
                                Grid.Column="1"
                                Content="🔄"
                                Width="28"
                                Height="28"
                                Background="#FF28A745"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                FontSize="14"
                                ToolTip="사업장 정보 새로고침"
                                Click="RefreshSiteButton_Click"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- 하단 그리드 영역 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400" MinWidth="300"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <GridSplitter Grid.Column="1" 
                          Width="5" 
                          HorizontalAlignment="Stretch" 
                          Background="#FFE0E0E0"/>

            <!-- 왼쪽: 기준정보 파라미터 그리드 -->
            <Border Grid.Column="0" 
                    Background="White" 
                    BorderBrush="#FFE0E0E0" 
                    BorderThickness="1" 
                    CornerRadius="8"
                    Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- 제목 및 버튼 -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0"
                                   Text="기준정보 파라미터" 
                                   FontSize="14" 
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"/>
                        
                        <!-- 버튼 그룹 -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <!-- 파라미터 추가 버튼 -->
                            <Button x:Name="AddParameterButton" 
                                    Width="30" Height="30"
                                    Click="AddParameterButton_Click"
                                    Background="#FF28A745" 
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    FontWeight="Bold"
                                    FontSize="14"
                                    Margin="0,0,5,0"
                                    ToolTip="파라미터 추가">
                                <TextBlock Text="➕"/>
                            </Button>
                            
                            <!-- 파라미터 삭제 버튼 -->
                            <Button x:Name="DeleteParameterButton" 
                                    Width="30" Height="30"
                                    Click="DeleteParameterButton_Click"
                                    Background="#FFDC3545" 
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    FontWeight="Bold"
                                    FontSize="14"
                                    Margin="0,0,5,0"
                                    ToolTip="파라미터 삭제"
                                    IsEnabled="False">
                                <TextBlock Text="🗑️"/>
                            </Button>
                            
                            <!-- 값 초기화 버튼 -->
                            <Button x:Name="ClearValuesButton" 
                                    Width="30" Height="30"
                                    Click="ClearValuesButton_Click"
                                    Background="#FFFFC107" 
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    FontWeight="Bold"
                                    FontSize="14"
                                    Margin="0,0,5,0"
                                    ToolTip="모든 값 초기화">
                                <TextBlock Text="🔄"/>
                            </Button>
                            
                            <!-- 파라미터 저장 버튼 -->
                            <Button x:Name="SaveParametersButton" 
                                    Width="30" Height="30"
                                    Click="SaveParametersButton_Click"
                                    Background="#FF0078D7" 
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    FontWeight="Bold"
                                    FontSize="14"
                                    ToolTip="변경사항 저장">
                                <TextBlock Text="💾"/>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!-- 파라미터 그리드 (파라미터 / 값 / 설명) -->
                    <DataGrid x:Name="PlanInfoDataGrid" 
                              Grid.Row="1"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              AlternatingRowBackground="#FFF8F9FA"
                              GridLinesVisibility="All"
                              HeadersVisibility="All"
                              BorderThickness="1"
                              BorderBrush="#FFE0E0E0"
                              FontSize="10"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollBarVisibility="Auto"
                              LoadingRow="DataGrid_LoadingRow"
                              ClipboardCopyMode="ExcludeHeader"
                              SelectionMode="Single"
                              SelectionUnit="FullRow"
                              CanUserResizeColumns="True"
                              CanUserReorderColumns="False"
                              CanUserSortColumns="False"
                              SelectionChanged="PlanInfoDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <!-- 파라미터 컬럼 (편집 가능) -->
                            <DataGridTextColumn Header="파라미터" 
                                                Binding="{Binding Parameter, UpdateSourceTrigger=PropertyChanged}" 
                                                Width="120"
                                                IsReadOnly="False">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="Background" Value="#FFE3F2FD"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                                <DataGridTextColumn.EditingElementStyle>
                                    <Style TargetType="TextBox">
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="Background" Value="#FFBBDEFB"/>
                                    </Style>
                                </DataGridTextColumn.EditingElementStyle>
                            </DataGridTextColumn>
                            
                            <!-- 값 컬럼 (편집 가능) -->
                            <DataGridTextColumn Header="값" 
                                                Binding="{Binding Value, UpdateSourceTrigger=PropertyChanged}" 
                                                Width="150"
                                                IsReadOnly="False">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="Background" Value="#FFFFFFE0"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                                <DataGridTextColumn.EditingElementStyle>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="Background" Value="#FFFFFF99"/>
                                    </Style>
                                </DataGridTextColumn.EditingElementStyle>
                            </DataGridTextColumn>
                            
                            <!-- 설명 컬럼 (편집 가능하도록 변경) -->
                            <DataGridTextColumn Header="설명" 
                                                Binding="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                                                Width="*"
                                                IsReadOnly="False">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="TextWrapping" Value="Wrap"/>
                                        <Setter Property="Background" Value="#FFF5F5F5"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                                <DataGridTextColumn.EditingElementStyle>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="Background" Value="#FFE0E0E0"/>
                                    </Style>
                                </DataGridTextColumn.EditingElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#FF0078D7"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="FontSize" Value="10"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                    </DataGrid>
                    
                    <!-- 결과 텍스트 -->
                    <TextBlock x:Name="ParameterStatusTextBlock"
                               Grid.Row="2"
                               FontSize="10"
                               Foreground="#FF6C757D"
                               Margin="0,5,0,0"
                               TextAlignment="Center"
                               Text=""/>
                </Grid>
            </Border>

            <!-- 오른쪽: 동적 그리드 영역 -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 동적 그리드 설정 영역 -->
                <Border Grid.Row="0" 
                        Background="White" 
                        BorderBrush="#FFE0E0E0" 
                        BorderThickness="1" 
                        CornerRadius="8"
                        Padding="10"
                        Margin="5,0,5,10">
                    <StackPanel Orientation="Vertical">
                        <!-- 첫 번째 줄: 폰트 크기 조절 + Excel 다운로드 -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
                            <!-- 폰트 크기 조절 -->
                            <Border BorderBrush="#FF0078D7" 
                                    BorderThickness="2" 
                                    CornerRadius="8" 
                                    Padding="10,5"
                                    Margin="0,0,10,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="폰트:" 
                                               VerticalAlignment="Center" 
                                               FontWeight="Bold"
                                               Margin="0,0,10,0"/>
                                    <Button x:Name="DecreaseFontButton" 
                                            Content="-"
                                            Width="32" Height="32"
                                            Click="DecreaseFontButton_Click"
                                            Background="#FF6C757D"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            FontWeight="Bold"
                                            FontSize="16"
                                            Margin="0,0,5,0"/>
                                    <TextBlock x:Name="FontSizeTextBlock"
                                               Text="16"
                                               Width="30"
                                               TextAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontWeight="Bold"
                                               FontSize="16"
                                               Margin="0,0,5,0"/>
                                    <Button x:Name="IncreaseFontButton" 
                                            Content="+"
                                            Width="32" Height="32"
                                            Click="IncreaseFontButton_Click"
                                            Background="#FF6C757D"
                                            Foreground="White"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            FontWeight="Bold"
                                            FontSize="16"/>
                                </StackPanel>
                            </Border>

                            <!-- Excel 다운로드 버튼 -->
                            <Button x:Name="ExportToExcelButton" 
                                    Height="42"
                                    Click="ExportToExcelButton_Click"
                                    Background="#FF28A745" 
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    FontWeight="Bold"
                                    FontSize="13"
                                    Padding="15,0">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="📊" FontSize="16" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="Excel 다운로드" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <!-- 두 번째 줄: 기준정보 쿼리 선택 + 전체 조회 버튼 -->
                        <Border BorderBrush="#FF28A745" 
                                BorderThickness="2" 
                                CornerRadius="8" 
                                Padding="10,5">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="기준정보:" 
                                           VerticalAlignment="Center" 
                                           FontWeight="Bold"
                                           Margin="0,0,10,0"/>
                                <ComboBox x:Name="QuerySelectComboBox" 
                                          Width="300"
                                          Height="32"
                                          DisplayMemberPath="QueryName"
                                          Margin="0,0,5,0"
                                          VerticalAlignment="Center"/>
                                
                                <Button x:Name="ClearQuerySelectButton"
                                        Content="✖"
                                        Width="32" Height="32"
                                        Click="ClearQuerySelectButton_Click"
                                        Background="#FFDC3545"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        FontWeight="Bold"
                                        ToolTip="선택 취소"
                                        Margin="0,0,10,0"/>
                                
                                <!-- 전체 조회 버튼 -->
                                <Button x:Name="ExecuteAllGridsButton" 
                                        Width="150"
                                        Height="32"
                                        Background="#FFDC3545" 
                                        Foreground="White"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        FontWeight="Bold"
                                        FontSize="12"
                                        Click="ExecuteAllGridsButton_Click">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="⚡" FontSize="14" Margin="0,0,5,0"/>
                                        <TextBlock Text="전체 조회"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- 동적 그리드 스크롤 영역 -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Padding="5"
                              x:Name="GridScrollViewer">
                    <Grid x:Name="DynamicGridsContainer">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
