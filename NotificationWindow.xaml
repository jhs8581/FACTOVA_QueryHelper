<Window x:Class="FACTOVA_QueryHelper.NotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notification" 
        Width="500" 
        Height="400"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="True"
        ResizeMode="CanResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock x:Name="HeaderTextBlock"
                       FontSize="16" 
                       FontWeight="Bold"
                       Foreground="#FF2196F3"/>
        </StackPanel>

        <Border Grid.Row="1" 
                BorderBrush="#FFCCCCCC" 
                BorderThickness="1"
                CornerRadius="4"
                Background="White">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="NotificationsItemsControl" Margin="10">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="• " 
                                          FontSize="14"
                                          Foreground="#FF4CAF50"
                                          VerticalAlignment="Top"/>
                                <TextBlock Text="{Binding}" 
                                          FontSize="14"
                                          TextWrapping="Wrap"
                                          VerticalAlignment="Top"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <Button Grid.Row="2" 
                x:Name="OkButton"
                Content="OK" 
                Width="100" 
                Height="35"
                Margin="0,15,0,0"
                HorizontalAlignment="Right"
                Click="OkButton_Click"
                IsDefault="True"
                FontSize="14"
                Background="#FF2196F3"
                Foreground="White"
                BorderThickness="0"
                Cursor="Hand">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="4"
                                        Padding="15,8">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#FF1976D2"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>
