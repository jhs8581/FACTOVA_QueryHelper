<Window x:Class="FACTOVA_QueryHelper.Windows.GridPopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="그리드 보기" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterOwner"
        Background="#FFF8F9FA">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 제목 영역 -->
        <Border Grid.Row="0" 
                Background="White" 
                BorderBrush="#FFE0E0E0" 
                BorderThickness="1" 
                CornerRadius="8"
                Padding="15"
                Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock x:Name="TitleTextBlock" 
                               Text="그리드" 
                               FontSize="16" 
                               FontWeight="Bold"
                               Foreground="#FF0078D7"/>
                    <TextBlock x:Name="InfoTextBlock" 
                               Text="" 
                               FontSize="11" 
                               Foreground="#FF6C757D"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <Button Grid.Column="1"
                        x:Name="CloseButton"
                        Content="✖ 닫기"
                        Width="100"
                        Height="35"
                        Background="#FF6C757D"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontWeight="Bold"
                        FontSize="13"
                        Click="CloseButton_Click"/>
            </Grid>
        </Border>

        <!-- 그리드 영역 -->
        <DataGrid x:Name="PopupDataGrid" 
                  Grid.Row="1"
                  AutoGenerateColumns="True"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  AlternatingRowBackground="#FFF8F9FA"
                  GridLinesVisibility="All"
                  HeadersVisibility="All"
                  BorderThickness="1"
                  BorderBrush="#FFE0E0E0"
                  FontSize="12"
                  HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto"
                  ClipboardCopyMode="IncludeHeader"
                  SelectionMode="Extended"
                  SelectionUnit="Cell"
                  CanUserResizeColumns="True"
                  CanUserReorderColumns="True"
                  CanUserSortColumns="True"
                  ColumnHeaderStyle="{StaticResource NerpDataGridColumnHeaderStyle}"
                  CellStyle="{StaticResource NerpDataGridCellStyle}"/>
    </Grid>
</Window>
