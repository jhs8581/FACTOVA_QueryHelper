<Window x:Class="FACTOVA_QueryHelper.Windows.CellDetailPopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="셀 상세 보기" 
        Height="800" Width="1200"
        WindowStartupLocation="CenterOwner"
        Background="#FFF8F9FA"
        ResizeMode="CanResizeWithGrip">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 제목 영역 -->
        <Border Grid.Row="0" 
                Background="White" 
                BorderBrush="#FFE0E0E0" 
                BorderThickness="1" 
                CornerRadius="8"
                Padding="15"
                Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="📋 셀 상세 보기" 
                               FontSize="16" 
                               FontWeight="Bold"
                               Foreground="#FF0078D7"/>
                    <TextBlock x:Name="InfoTextBlock" 
                               Text="선택된 행의 컬럼/값을 피벗 형태로 표시합니다." 
                               FontSize="11" 
                               Foreground="#FF6C757D"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <Button Grid.Column="1"
                        x:Name="CloseButton"
                        Content="✖"
                        Width="35"
                        Height="35"
                        Background="#FF6C757D"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontWeight="Bold"
                        FontSize="14"
                        Click="CloseButton_Click"/>
            </Grid>
        </Border>

        <!-- 검색 영역 -->
        <Border Grid.Row="1" 
                Background="White" 
                BorderBrush="#FFE0E0E0" 
                BorderThickness="1" 
                CornerRadius="8"
                Padding="10"
                Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="🔍 검색:"
                           VerticalAlignment="Center"
                           FontWeight="SemiBold"
                           Margin="0,0,10,0"/>

                <TextBox x:Name="SearchTextBox"
                         Grid.Column="1"
                         Height="30"
                         VerticalContentAlignment="Center"
                         BorderBrush="#FF0078D7"
                         BorderThickness="2"
                         Padding="8,4"
                         TextChanged="SearchTextBox_TextChanged"/>

                <Button x:Name="ClearSearchButton"
                        Grid.Column="2"
                        Content="✖"
                        Width="30"
                        Height="30"
                        Background="#FFDC3545"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontWeight="Bold"
                        Margin="5,0,0,0"
                        Click="ClearSearchButton_Click"/>
            </Grid>
        </Border>

        <!-- 피벗 그리드 영역 -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 왼쪽: DataGrid -->
            <Border Grid.Column="0"
                    Background="White" 
                    BorderBrush="#FFE0E0E0" 
                    BorderThickness="1" 
                    CornerRadius="8"
                    Padding="10">
                <DataGrid x:Name="PivotDataGrid" 
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          GridLinesVisibility="All"
                          HeadersVisibility="Column"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          FontFamily="Malgun Gothic, Segoe UI, sans-serif"
                          FontSize="12"
                          ClipboardCopyMode="IncludeHeader"
                          SelectionChanged="PivotDataGrid_SelectionChanged">
                    <DataGrid.Columns>
                        <!-- 컬럼명 -->
                        <DataGridTextColumn Header="컬럼명" 
                                            Binding="{Binding ColumnName}" 
                                            Width="220">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Foreground" Value="#FF0078D7"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="5,8"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        
                        <!-- 값 (미리보기) -->
                        <DataGridTextColumn Header="값" 
                                            Binding="{Binding Value}" 
                                            Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                    <Setter Property="Padding" Value="5,8"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- 오른쪽: 확대 보기 영역 -->
            <Border Grid.Column="2"
                    Background="White" 
                    BorderBrush="#FFE0E0E0" 
                    BorderThickness="1" 
                    CornerRadius="8"
                    Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 헤더 -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="🔍" 
                                   FontSize="16" 
                                   VerticalAlignment="Center"
                                   Margin="0,0,5,0"/>
                        <TextBlock Text="선택된 값 확대 보기" 
                                   FontSize="14" 
                                   FontWeight="Bold"
                                   Foreground="#FF0078D7"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- 확대 TextBox -->
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Auto">
                        <TextBox x:Name="DetailTextBox"
                                 Text="← 왼쪽에서 행을 선택하면 값이 여기에 표시됩니다."
                                 TextWrapping="Wrap"
                                 IsReadOnly="True"
                                 FontFamily="Malgun Gothic, Consolas"
                                 FontSize="13"
                                 Padding="10"
                                 Background="#FFF8F9FA"
                                 BorderThickness="0"
                                 Foreground="#FF495057"
                                 AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Disabled"
                                 HorizontalScrollBarVisibility="Disabled"/>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- 하단 버튼 영역 -->
        <Border Grid.Row="3" 
                Background="White" 
                BorderBrush="#FFE0E0E0" 
                BorderThickness="1" 
                CornerRadius="8"
                Padding="10"
                Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="CopyAllButton"
                        Content="📋 전체 복사"
                        Width="120"
                        Height="35"
                        Background="#FF28A745"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontWeight="Bold"
                        FontSize="12"
                        Margin="0,0,10,0"
                        Click="CopyAllButton_Click"/>

                <Button x:Name="CopySelectedButton"
                        Content="📋 선택 복사"
                        Width="120"
                        Height="35"
                        Background="#FF0078D7"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontWeight="Bold"
                        FontSize="12"
                        Margin="0,0,10,0"
                        Click="CopySelectedButton_Click"/>

                <Button Content="닫기"
                        Width="80"
                        Height="35"
                        Background="#FF6C757D"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontWeight="Bold"
                        FontSize="12"
                        Click="CloseButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
