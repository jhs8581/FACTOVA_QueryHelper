<Window x:Class="FACTOVA_QueryHelper.Windows.CellDetailPopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="셀 상세 보기" 
        Height="800" Width="700"
        WindowStartupLocation="CenterOwner"
        Background="#FFF8F9FA"
        ResizeMode="CanResizeWithGrip">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 제목 영역 -->
        <Border Grid.Row="0" 
                Background="White" 
                BorderBrush="#FFE0E0E0" 
                BorderThickness="1" 
                CornerRadius="8"
                Padding="15"
                Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="📋 셀 상세 보기" 
                               FontSize="16" 
                               FontWeight="Bold"
                               Foreground="#FF0078D7"/>
                    <TextBlock x:Name="InfoTextBlock" 
                               Text="선택된 행의 컬럼/값을 피벗 형태로 표시합니다." 
                               FontSize="11" 
                               Foreground="#FF6C757D"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <Button Grid.Column="1"
                        x:Name="CloseButton"
                        Content="✖"
                        Width="35"
                        Height="35"
                        Background="#FF6C757D"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontWeight="Bold"
                        FontSize="14"
                        Click="CloseButton_Click"/>
            </Grid>
        </Border>

        <!-- 검색 영역 -->
        <Border Grid.Row="1" 
                Background="White" 
                BorderBrush="#FFE0E0E0" 
                BorderThickness="1" 
                CornerRadius="8"
                Padding="10"
                Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="🔍 검색:"
                           VerticalAlignment="Center"
                           FontWeight="SemiBold"
                           Margin="0,0,10,0"/>

                <TextBox x:Name="SearchTextBox"
                         Grid.Column="1"
                         Height="30"
                         VerticalContentAlignment="Center"
                         BorderBrush="#FF0078D7"
                         BorderThickness="2"
                         Padding="8,4"
                         TextChanged="SearchTextBox_TextChanged"/>

                <Button x:Name="ClearSearchButton"
                        Grid.Column="2"
                        Content="✖"
                        Width="30"
                        Height="30"
                        Background="#FFDC3545"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontWeight="Bold"
                        Margin="5,0,0,0"
                        Click="ClearSearchButton_Click"/>
            </Grid>
        </Border>

        <!-- 피벗 그리드 영역 -->
        <Border Grid.Row="2" 
                Background="White" 
                BorderBrush="#FFE0E0E0" 
                BorderThickness="1" 
                CornerRadius="8"
                Padding="10">
            <DataGrid x:Name="PivotDataGrid" 
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      GridLinesVisibility="All"
                      HeadersVisibility="Column"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      FontFamily="Malgun Gothic, Segoe UI, sans-serif"
                      FontSize="12"
                      ClipboardCopyMode="IncludeHeader">
                <DataGrid.Columns>
                    <!-- 컬럼명 -->
                    <DataGridTextColumn Header="컬럼명" 
                                        Binding="{Binding ColumnName}" 
                                        Width="220">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Foreground" Value="#FF0078D7"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="5,3"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    
                    <!-- 값 -->
                    <DataGridTextColumn Header="값" 
                                        Binding="{Binding Value}" 
                                        Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextWrapping" Value="Wrap"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="5,3"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <!-- 하단 버튼 영역 -->
        <Border Grid.Row="3" 
                Background="White" 
                BorderBrush="#FFE0E0E0" 
                BorderThickness="1" 
                CornerRadius="8"
                Padding="10"
                Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="CopyAllButton"
                        Content="📋 전체 복사"
                        Width="120"
                        Height="35"
                        Background="#FF28A745"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontWeight="Bold"
                        FontSize="12"
                        Margin="0,0,10,0"
                        Click="CopyAllButton_Click"/>

                <Button x:Name="CopySelectedButton"
                        Content="📋 선택 복사"
                        Width="120"
                        Height="35"
                        Background="#FF0078D7"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontWeight="Bold"
                        FontSize="12"
                        Margin="0,0,10,0"
                        Click="CopySelectedButton_Click"/>

                <Button Content="닫기"
                        Width="80"
                        Height="35"
                        Background="#FF6C757D"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontWeight="Bold"
                        FontSize="12"
                        Click="CloseButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
